    size?: "sm" | "md" | "lg";
}

const { status, size = "md" } = Astro.props;

const statusConfig = {
    present: {
        icon: "‚úÖ",
        label: "Presente",
        bgClass: "bg-green-100",
        textClass: "text-green-700",
        borderClass: "border-green-300",
    },
    absent: {
        icon: "‚ùå",
        label: "Ausente",
        bgClass: "bg-red-100",
