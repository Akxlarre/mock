---
/**
 * VehicleAssignmentHistory - Timeline de historial de asignaciones de vehículos
 * RF-042: Visualización del historial de vehículos asignados a un instructor
 */

interface VehicleHistoryEntry {
  vehiculoId: number;
  patente: string;
  modelo: string;
  fechaInicio: string;
  fechaFin: string | null;
  asignadoPor: string;
}

interface Props {
  historialVehiculos: VehicleHistoryEntry[];
  class?: string;
}

const { historialVehiculos, class: className = "" } = Astro.props;

// Función helper para formatear fechas
function formatearFecha(fecha: string): string {
  const date = new Date(fecha);
  return date.toLocaleDateString("es-CL", {
    day: "2-digit",
    month: "short",
    year: "numeric",
  });
}

// Función helper para calcular duración
function calcularDuracion(
  fechaInicio: string,
  fechaFin: string | null
): string {
  const inicio = new Date(fechaInicio);
  const fin = fechaFin ? new Date(fechaFin) : new Date();

  const diffTime = Math.abs(fin.getTime() - inicio.getTime());
  const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
  const diffMonths = Math.floor(diffDays / 30);

  if (diffMonths > 0) {
    return `${diffMonths} ${diffMonths === 1 ? "mes" : "meses"}`;
  }
  return `${diffDays} ${diffDays === 1 ? "día" : "días"}`;
}

// Ordenar historial por fecha (más reciente primero)
const historialOrdenado = [...historialVehiculos].sort((a, b) => {
  const dateA = new Date(a.fechaInicio).getTime();
  const dateB = new Date(b.fechaInicio).getTime();
  return dateB - dateA;
});
---

<div class={className}>
  {
    historialOrdenado.length === 0 ? (
      // Estado vacío
      <div class="text-center py-12">
        <svg
          class="w-16 h-16 mx-auto text-gray-300 mb-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.5"
            d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
          />
        </svg>
        <p class="text-sm text-gray-500">
          Sin historial de asignaciones de vehículos
        </p>
        <p class="text-xs text-gray-400 mt-1">
          Las asignaciones futuras aparecerán aquí
        </p>
      </div>
    ) : (
      // Timeline de historial
      <div class="space-y-4">
        {historialOrdenado.map((entry, index) => {
          const esActual = entry.fechaFin === null;
          return (
            <div class="relative flex gap-4">
              {/* Línea vertical del timeline */}
              {index < historialOrdenado.length - 1 && (
                <div class="absolute left-3 top-8 bottom-0 w-px bg-gray-200" />
              )}

              {/* Punto del timeline */}
              <div class="relative z-10 flex-shrink-0">
                {esActual ? (
                  <div class="w-6 h-6 rounded-full bg-blue-600 flex items-center justify-center">
                    <div class="w-2 h-2 rounded-full bg-white" />
                  </div>
                ) : (
                  <div class="w-6 h-6 rounded-full bg-gray-300 flex items-center justify-center">
                    <div class="w-1.5 h-1.5 rounded-full bg-white" />
                  </div>
                )}
              </div>

              {/* Contenido */}
              <div class="flex-1 pb-4">
                <div
                  class={`border rounded-lg p-4 ${
                    esActual
                      ? "bg-blue-50 border-blue-200"
                      : "bg-gray-50 border-gray-200"
                  }`}
                >
                  {/* Header */}
                  <div class="flex items-start justify-between mb-2">
                    <div>
                      <h4 class="text-sm font-semibold text-gray-900">
                        {entry.patente}
                      </h4>
                      <p class="text-xs text-gray-600">{entry.modelo}</p>
                    </div>
                    {esActual && (
                      <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        Actual
                      </span>
                    )}
                  </div>

                  {/* Fechas */}
                  <div class="grid grid-cols-2 gap-3 mb-3">
                    <div>
                      <p class="text-xs text-gray-500 mb-0.5">Inicio</p>
                      <p class="text-sm font-medium text-gray-900">
                        {formatearFecha(entry.fechaInicio)}
                      </p>
                    </div>
                    <div>
                      <p class="text-xs text-gray-500 mb-0.5">Fin</p>
                      <p class="text-sm font-medium text-gray-900">
                        {entry.fechaFin
                          ? formatearFecha(entry.fechaFin)
                          : "Presente"}
                      </p>
                    </div>
                  </div>

                  {/* Duración */}
                  <div class="flex items-center justify-between text-xs">
                    <span class="text-gray-500">
                      Duración:{" "}
                      <span class="font-medium text-gray-700">
                        {calcularDuracion(entry.fechaInicio, entry.fechaFin)}
                      </span>
                    </span>
                    <span class="text-gray-500">
                      Asignado por:{" "}
                      <span class="font-medium text-gray-700">
                        {entry.asignadoPor}
                      </span>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          );
        })}
      </div>
    )
  }
</div>
