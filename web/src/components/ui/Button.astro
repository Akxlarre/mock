---
/**
 * Button – Design System Geist-Inspired
 * Variantes: primary (black CTA), secondary (outline), error, ghost
 * Área táctil mínima 44px cumplida
 * Sombras sutiles y transiciones snappy
 */
interface Props {
  variant?: "primary" | "secondary" | "error" | "ghost";
  type?: "button" | "submit" | "reset";
  disabled?: boolean;
  href?: string;
  class?: string;
  onClick?: string;
  id?: string;
}

const {
  variant = "secondary",
  type = "button",
  disabled = false,
  href,
  class: className = "",
  onClick,
  id,
} = Astro.props;

// Geist-style: minimal, monocromático + acción
const variantClasses: Record<NonNullable<Props["variant"]>, string> = {
  primary: "bg-gray-900 text-white hover:bg-gray-800 border-0 shadow-sm",
  secondary:
    "bg-white border border-gray-300 text-gray-900 hover:bg-gray-50 hover:border-gray-400 shadow-sm",
  error: "bg-red-600 text-white hover:bg-red-700 border-0 shadow-sm",
  ghost: "bg-transparent text-gray-700 hover:bg-gray-100 border-0",
};

const baseClasses =
  "inline-flex items-center justify-center h-11 px-4 text-sm font-medium rounded-md transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gray-900 focus-visible:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed disabled:pointer-events-none";
const variantClass = variantClasses[variant];
const allClasses = [baseClasses, variantClass, className]
  .filter(Boolean)
  .join(" ");
---

{
  href && !disabled ? (
    <a href={href} class={allClasses} id={id}>
      <slot />
    </a>
  ) : (
    <button
      type={type}
      disabled={disabled}
      class={allClasses}
      onclick={onClick}
      id={id}
    >
      <slot />
    </button>
  )
}
