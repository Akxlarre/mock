---
/**
 * Card Alumno â€“ 00.5 design system: nombre, RUT, badge estado (Activo/Pendiente/etc.)
 * Ancho ~400px, reutilizable en listas de alumnos.
 */
interface Props {
  nombre: string;
  rut: string;
  estado?: 'Activo' | 'Pendiente' | 'Bloqueado';
  href?: string;
  class?: string;
}

const { nombre, rut, estado = 'Activo', href, class: className = '' } = Astro.props;

const badgeVariant = estado === 'Activo' ? 'success' : estado === 'Pendiente' ? 'warning' : 'error';
---
<div class={`card card-bordered bg-base-100 rounded-lg shadow-sm w-full max-w-100 p-6 transition-all duration-200 hover:shadow-md ${className}`}>
  <div class="flex flex-col gap-2">
    <h3 class="text-lg font-semibold text-base-content">{nombre}</h3>
    <p class="text-sm text-base-content/70">RUT: {rut}</p>
    <div class="mt-2">
      <span class={`badge badge-sm font-medium ${badgeVariant === 'success' ? 'badge-success' : badgeVariant === 'warning' ? 'badge-warning' : 'badge-error'}`}>
        {estado}
      </span>
    </div>
    {href && (
      <a href={href} class="btn btn-primary btn-sm mt-3 w-fit min-h-10">
        Ver detalle
      </a>
    )}
  </div>
</div>
