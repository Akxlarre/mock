---
/**
 * Modal – Contenedor según design-system-specs (módulo 02).
 * Se abre por ancla: enlace href="#modal-id". Cerrar con enlace href="#" o botón que cierre.
 * Usar id único por página.
 */
interface Props {
  id: string;
  title: string;
  class?: string;
}

const { id, title, class: className = '' } = Astro.props;
---
<div id={id} class={`modal ${className}`} role="dialog" aria-modal="true" aria-labelledby={`${id}-title`} tabindex="-1">
  <div class="modal-box max-w-md rounded-xl shadow-xl">
    <h2 id={`${id}-title`} class="text-2xl font-semibold text-base-content mb-4">{title}</h2>
    <div class="text-base-content">
      <slot />
    </div>
    <div class="modal-action mt-8">
      <slot name="footer" />
    </div>
  </div>
  <a href="#" class="modal-backdrop" aria-label="Cerrar">Cerrar overlay</a>
</div>
