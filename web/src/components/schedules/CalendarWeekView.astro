---
/**
 * Componente: Vista de Calendario Semanal
 * Para secretaria: Agendar clases con vista de disponibilidad
 * RF-014: Bloques de 1 hora, vista calendario semanal
 */
import Card from "../ui/Card.astro";
import type { Booking } from "../../lib/mockBookings";
import type { Instructor } from "../../lib/mockInstructors";

export interface TimeSlot {
    time: string;
    available: boolean;
    booking?: {
        id: number;
        studentName: string;
        instructorName: string;
        vehiclePatente: string;
    };
}

export interface DaySchedule {
    date: string;
    dayName: string;
    dayNumber: number;
    isToday: boolean;
    isClosed: boolean; // Domingo
    slots: TimeSlot[];
}

export interface Props {
    weekDays: DaySchedule[];
    instructors: Instructor[];
    selectedInstructor?: number;
}

const { weekDays, instructors, selectedInstructor } = Astro.props;

// Horarios fijos (8:00 - 20:00 L-V, 8:00 - 13:00 Sáb)
const allTimeSlots = [
    "08:00",
    "09:00",
    "10:00",
    "11:00",
    "12:00",
    "13:00",
    "14:00",
    "15:00",
    "16:00",
    "17:00",
    "18:00",
    "19:00",
];
---

<Card class="p-6">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h2 class="text-xl font-semibold text-gray-900">
                Calendario Semanal
            </h2>
            <p class="text-sm text-gray-600 mt-1">
                Click en un bloque disponible para agendar clase
            </p>
        </div>

        <div class="flex gap-2">
            <button
                type="button"
                class="px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50"
            >
                ← Semana Anterior
            </button>
            <button
                type="button"
                class="px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50"
            >
                Siguiente Semana →
            </button>
        </div>
    </div>

    <!-- Filtro de Instructor -->
    <div class="mb-4">
        <label
            for="instructor-filter"
            class="block text-sm font-medium text-gray-700 mb-2"
        >
            Filtrar por Instructor
        </label>
        <select
            id="instructor-filter"
            name="instructor"
            class="w-64 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
        >
            <option value="">Todos los instructores</option>
            {
                instructors.map((instructor) => (
                    <option
                        value={instructor.id}
                        selected={selectedInstructor === instructor.id}
                    >
                        {instructor.nombre}
                    </option>
                ))
            }
        </select>
    </div>

    <!-- Leyenda -->
    <div class="flex flex-wrap gap-4 mb-6 text-xs">
        <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-green-100 border border-green-300 rounded">
            </div>
            <span class="text-gray-700">Disponible</span>
        </div>
        <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-blue-100 border border-blue-300 rounded">
            </div>
            <span class="text-gray-700">Ocupado</span>
        </div>
        <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-gray-100 border border-gray-300 rounded">
            </div>
            <span class="text-gray-700">Fuera de horario</span>
        </div>
    </div>

    <!-- Calendario -->
    <div class="overflow-x-auto">
        <table class="w-full border-collapse min-w-[800px]">
            <thead>
                <tr class="border-b-2 border-gray-300">
                    <th
                        class="sticky left-0 bg-white z-10 p-3 text-left text-sm font-semibold text-gray-700 w-20"
                    >
                        Hora
                    </th>
                    {
                        weekDays.map((day) => (
                            <th
                                class={`p-3 text-center text-sm font-semibold ${
                                    day.isToday
                                        ? "text-blue-600"
                                        : "text-gray-700"
                                }`}
                            >
                                <div>
                                    <div>{day.dayName}</div>
                                    <div class="text-lg font-bold mt-1">
                                        {day.dayNumber}
                                    </div>
                                    {day.isToday && (
                                        <div class="text-xs text-blue-600 mt-1">
                                            Hoy
                                        </div>
                                    )}
                                </div>
                            </th>
                        ))
                    }
                </tr>
            </thead>
            <tbody>
                {
                    allTimeSlots.map((time) => (
                        <tr class="border-b border-gray-200 hover:bg-gray-50">
                            <td class="sticky left-0 bg-white z-10 p-3 text-sm font-medium text-gray-700 border-r border-gray-200">
                                {time}
                            </td>
                            {weekDays.map((day) => {
                                const slot = day.slots.find(
                                    (s) => s.time === time,
                                );

                                if (day.isClosed) {
                                    return (
                                        <td class="p-2 bg-gray-50">
                                            <div class="text-center text-xs text-gray-400">
                                                Cerrado
                                            </div>
                                        </td>
                                    );
                                }

                                // Sábado solo hasta 13:00
                                if (
                                    day.dayName === "Sáb" &&
                                    parseInt(time) >= 13
                                ) {
                                    return (
                                        <td class="p-2 bg-gray-100">
                                            <div class="text-center text-xs text-gray-400">
                                                —
                                            </div>
                                        </td>
                                    );
                                }

                                if (!slot) {
                                    return (
                                        <td class="p-2 bg-gray-100">
                                            <div class="text-center text-xs text-gray-400">
                                                —
                                            </div>
                                        </td>
                                    );
                                }

                                if (slot.booking) {
                                    return (
                                        <td class="p-2">
                                            <button
                                                type="button"
                                                class="w-full px-2 py-2 bg-blue-100 border border-blue-300 rounded text-left hover:bg-blue-200 transition-colors"
                                                data-booking-id={
                                                    slot.booking.id
                                                }
                                            >
                                                <div class="text-xs font-medium text-blue-900 truncate">
                                                    {slot.booking.studentName}
                                                </div>
                                                <div class="text-xs text-blue-700 truncate">
                                                    {
                                                        slot.booking
                                                            .vehiclePatente
                                                    }
                                                </div>
                                            </button>
                                        </td>
                                    );
                                }

                                if (slot.available) {
                                    return (
                                        <td class="p-2">
                                            <button
                                                type="button"
                                                class="w-full h-16 bg-green-100 border-2 border-green-300 rounded hover:bg-green-200 hover:border-green-400 transition-colors cursor-pointer"
                                                data-date={day.date}
                                                data-time={time}
                                                onclick="openBookingModal(this.dataset.date, this.dataset.time)"
                                            >
                                                <div class="text-xs text-green-700 font-medium">
                                                    Disponible
                                                </div>
                                            </button>
                                        </td>
                                    );
                                }

                                return (
                                    <td class="p-2 bg-gray-100">
                                        <div class="text-center text-xs text-gray-400">
                                            —
                                        </div>
                                    </td>
                                );
                            })}
                        </tr>
                    ))
                }
            </tbody>
        </table>
    </div>
</Card>

<script>
    // Función global para abrir modal de agendamiento
    (window as any).openBookingModal = function (date: string, time: string) {
        console.log("Agendar clase para:", date, time);
        // Aquí se abrirá el BookingModal
        const event = new CustomEvent("openBookingModal", {
            detail: { date, time },
        });
        window.dispatchEvent(event);
    };
</script>
