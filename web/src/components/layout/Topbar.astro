---
/**
 * Topbar - Barra superior con breadcrumbs, notificaciones y perfil de usuario
 */
import type { UserRole } from "../../lib/session";

interface Props {
  userName?: string;
  userRole?: UserRole;
  escuela?: string;
}

const {
  userName = "Jorge Administrador",
  userRole = "admin",
  escuela = "Conductores Chillán",
} = Astro.props;

// Generar breadcrumbs automáticamente desde la URL
const currentPath = Astro.url.pathname;
const pathSegments = currentPath.split("/").filter(Boolean);

// Mapeo de rutas a labels legibles
const routeLabels: Record<string, string> = {
  dashboard: "Dashboard",
  matricula: "Matrículas",
  nuevo: "Nueva Matrícula",
  alumnos: "Alumnos",
  usuarios: "Usuarios",
  pagos: "Pagos",
  flota: "Flota",
  agenda: "Agenda",
  instructor: "Instructor",
  secretaria: "Secretaría",
  clase: "Clase",
  ficha: "Ficha Técnica",
  liquidacion: "Mis Horas",
  horario: "Mi Horario",
  asistencia: "Asistencia",
  promociones: "Promociones",
  notificaciones: "Notificaciones",
  "clase-profesional": "Clase Profesional",
  evaluaciones: "Evaluaciones",
  administracion: "Administración",
  liquidaciones: "Liquidaciones",
};

// Construir breadcrumbs
let breadcrumbs = pathSegments
  .map((segment, index) => {
    const path = "/" + pathSegments.slice(0, index + 1).join("/");

    // Si es un ID numérico, no lo mostramos en breadcrumb
    if (/^\d+$/.test(segment)) {
      return null;
    }

    // Caso especial: dashboard de instructor
    if (userRole === "instructor" && currentPath === "/instructor/dashboard") {
      if (segment === "instructor") {
        return {
          label: "Mi Dashboard",
          path: "/instructor/dashboard",
          isLast: true,
        };
      }
      // Omitir otros segmentos (ej. "dashboard")
      return null;
    }

    // Para otros casos de instructor/secretaría, podemos omitir "dashboard" intermedio
    if (
      segment === "dashboard" &&
      (userRole === "instructor" || userRole === "secretaria")
    ) {
      return null;
    }

    return {
      label:
        routeLabels[segment] ||
        segment.charAt(0).toUpperCase() + segment.slice(1),
      path: path,
      isLast: index === pathSegments.length - 1,
    };
  })
  .filter(
    (crumb): crumb is { label: string; path: string; isLast: boolean } =>
      crumb !== null,
  );

// Siempre agregar "Inicio" al principio si no estamos en home
if (currentPath !== "/" && currentPath !== "/dashboard") {
  // "Inicio" depende del rol
  let homePath = "/dashboard";
  if (userRole === "instructor") {
    homePath = "/instructor/dashboard";
  } else if (userRole === "secretaria") {
    homePath = "/secretaria/dashboard";
  } else if (userRole === "alumno") {
    homePath = "/alumno/dashboard";
  } else if (userRole === "relator") {
    homePath = "/relator/dashboard";
  }

  breadcrumbs.unshift({
    label: "Inicio",
    path: homePath,
    isLast: false,
  });
}

const roleLabels: Record<UserRole, string> = {
  admin: "Administrador",
  instructor: "Instructor",
  secretaria: "Secretaria",
  alumno: "Alumno",
  relator: "Relator",
};
---

<header class="h-16 bg-white border-b border-gray-200 sticky top-0 z-20" data-topbar>
  <div class="h-full flex items-center px-4 lg:px-6 gap-4">
    <!-- Left: Hamburger + Breadcrumbs -->
    <div class="flex items-center gap-4 flex-1 min-w-0">
      <!-- Hamburger button (mobile) -->
      <button
        onclick="toggleSidebar()"
        class="lg:hidden p-2 -ml-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors"
        aria-label="Abrir menú"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>

      <!-- Breadcrumbs -->
      {
        breadcrumbs.length > 0 && (
          <nav class="hidden md:flex items-center gap-2 text-sm overflow-hidden">
            {breadcrumbs.map((crumb, index) => (
              <div class="flex items-center gap-2 min-w-0">
                {index > 0 && (
                  <svg
                    class="w-4 h-4 text-gray-400 shrink-0"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 5l7 7-7 7"
                    />
                  </svg>
                )}
                {crumb.isLast ? (
                  <span class="font-medium text-gray-900 truncate">
                    {crumb.label}
                  </span>
                ) : (
                  <a
                    href={crumb.path}
                    class="text-gray-600 hover:text-gray-900 transition-colors truncate"
                  >
                    {crumb.label}
                  </a>
                )}
              </div>
            ))}
          </nav>
        )
      }
    </div>

    <!-- Right: Search + User -->
    <div class="flex items-center gap-3 flex-none ml-auto">
      <!-- Quick search (mobile + desktop) -->
      <button
        class="flex p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors"
      >
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </button>

      <!-- User menu -->
      <div class="relative">
        <button
          id="userMenuButton"
          class="user-menu-btn flex items-center gap-2 hover:bg-gray-100 p-1.5 pr-3 rounded-lg transition-colors"
        >
          <div
            class="w-9 h-9 bg-gray-900 rounded-full flex items-center justify-center text-white font-semibold text-sm"
          >
            {
              userName
                .split(" ")
                .map((n) => n[0])
                .join("")
                .substring(0, 2)
            }
          </div>
          <div class="text-left hidden sm:block">
            <p class="text-sm font-medium text-gray-900">{userName}</p>
            <p class="text-xs text-secondary">{roleLabels[userRole]}</p>
          </div>
          <svg
            class="w-4 h-4 text-gray-600 hidden md:block"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>

        <!-- Dropdown menu -->
        <div
          id="userMenuDropdown"
          class="user-menu-dropdown hidden absolute right-0 mt-2 w-56 bg-white rounded-lg shadow-lg border border-gray-200 py-1 z-50"
        >
          <div class="px-4 py-3 border-b border-gray-200">
            <p class="text-sm font-medium text-gray-900">{userName}</p>
            <p class="text-xs text-secondary">{escuela}</p>
          </div>

          <a
            href="/perfil"
            class="flex items-center gap-3 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
          >
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
              ></path>
            </svg>
            Mi Perfil
          </a>

          <a
            href="/configuracion"
            class="flex items-center gap-3 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"
          >
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Configuración
          </a>

          <div class="border-t border-gray-200 my-1"></div>

          <a
            href="/login"
            class="flex items-center gap-3 px-4 py-2 text-sm text-red-600 hover:bg-red-50"
          >
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
              ></path>
            </svg>
            Cerrar Sesión
          </a>
        </div>
      </div>
    </div>
  </div>
</header>
