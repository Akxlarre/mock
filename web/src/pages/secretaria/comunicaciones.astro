---
/**
 * Comunicaciones - Secretaria (RF-019 / RF-020)
 * M칩dulo para env칤o de mensajes masivos e individuales
 */
import DashboardLayout from "../../layouts/DashboardLayout.astro";
import Card from "../../components/ui/Card.astro";
import Button from "../../components/ui/Button.astro";

const estudiantes = [
  { id: 1, nombre: "Juan P칠rez", curso: "Clase B", estado: "Al dia" },
  { id: 2, nombre: "Mar칤a Gonz치lez", curso: "Profesional A2", estado: "Atrasado (1 cuota)" },
  { id: 3, nombre: "Carlos Mu침oz", curso: "Clase B", estado: "Al dia" },
  { id: 4, nombre: "Ana Mart칤nez", curso: "Clase B", estado: "Documentos pendientes" },
  { id: 5, nombre: "Diego Torres", curso: "Profesional A4", estado: "Al dia" },
];
---

<DashboardLayout title="Comunicaciones" userRole="secretaria" userName="Patricia Secretaria">
  <div class="max-w-5xl mx-auto" x-data="{ tab: 'masivo' }">
    <!-- Header -->
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">游닉 Comunicaciones</h1>
      <p class="text-secondary">Gestiona el env칤o de informaci칩n a alumnos y grupos.</p>
    </div>

    <!-- Tabs -->
    <div class="mb-6 flex space-x-1 rounded-xl bg-gray-200 p-1 max-w-md">
      <button
        @click="tab = 'masivo'"
        :class="{ 'bg-white text-blue-700 shadow': tab === 'masivo', 'text-gray-600 hover:bg-white/[0.12] hover:text-blue-600': tab !== 'masivo' }"
        class="w-full rounded-lg py-2.5 text-sm font-medium leading-5 transition-all duration-200"
      >
        Mensaje Masivo
      </button>
      <button
        @click="tab = 'individual'"
        :class="{ 'bg-white text-blue-700 shadow': tab === 'individual', 'text-gray-600 hover:bg-white/[0.12] hover:text-blue-600': tab !== 'individual' }"
        class="w-full rounded-lg py-2.5 text-sm font-medium leading-5 transition-all duration-200"
      >
        Mensaje Individual
      </button>
    </div>

    <!-- Tab Masivo -->
    <div x-show="tab === 'masivo'" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0 transform scale-95" x-transition:enter-end="opacity-100 transform scale-100">
      <Card class="p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">游닏 Enviar Comunicado Masivo</h2>
        <form class="space-y-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Sede</label>
              <select class="w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                <option>Todas las sedes</option>
                <option>Chill치n Centro</option>
                <option>Chill치n Viejo</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Curso Destino</label>
              <select class="w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                <option>Todos los cursos</option>
                <option>Clase B</option>
                <option>Profesional A2</option>
                <option>Profesional A4</option>
              </select>
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Asunto</label>
            <input type="text" class="w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" placeholder="Ej: Cambio de horario clases te칩ricas" />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Mensaje</label>
            <textarea rows="6" class="w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" placeholder="Escribe tu mensaje aqu칤..."></textarea>
          </div>

          <div class="flex justify-end pt-2">
            <Button variant="primary" class="w-full md:w-auto">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path></svg>
              Enviar Comunicado
            </Button>
          </div>
        </form>
      </Card>
    </div>

    <!-- Tab Individual -->
    <div x-show="tab === 'individual'" style="display: none;" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0 transform scale-95" x-transition:enter-end="opacity-100 transform scale-100">
      <Card class="p-6">
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-semibold text-gray-900">游녻 Contacto Individual</h2>
            <div class="relative">
                <input type="text" placeholder="Buscar alumno..." class="pl-9 pr-4 py-2 rounded-lg border-gray-300 text-sm focus:ring-blue-500 focus:border-blue-500" />
                <svg class="w-4 h-4 text-gray-400 absolute left-3 top-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
            </div>
        </div>
        
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="px-4 py-3 text-left text-sm font-semibold text-gray-900">Nombre Alumno</th>
                <th class="px-4 py-3 text-left text-sm font-semibold text-gray-900">Curso</th>
                <th class="px-4 py-3 text-left text-sm font-semibold text-gray-900">Estado</th>
                <th class="px-4 py-3 text-right text-sm font-semibold text-gray-900">Acci칩n</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              {estudiantes.map((estudiante) => (
                <tr class="hover:bg-gray-50">
                  <td class="px-4 py-3 text-sm font-medium text-gray-900">{estudiante.nombre}</td>
                  <td class="px-4 py-3 text-sm text-gray-600">{estudiante.curso}</td>
                  <td class="px-4 py-3">
                    <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
                        estudiante.estado === 'Al dia' ? 'bg-green-100 text-green-800' : 
                        estudiante.estado.includes('Atrasado') ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800'
                    }`}>
                        {estudiante.estado}
                    </span>
                  </td>
                  <td class="px-4 py-3 text-right">
                    <div class="flex justify-end gap-2">
                        <Button variant="secondary" size="sm">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                            Contactar
                        </Button>
                    </div>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
        
        <!-- Pagination visualization -->
        <div class="flex items-center justify-between border-t border-gray-200 mt-4 pt-4">
            <p class="text-sm text-gray-500">Mostrando 1-5 de 24 alumnos</p>
            <div class="flex gap-2">
                <Button variant="ghost" size="sm" disabled>Anterior</Button>
                <Button variant="ghost" size="sm">Siguiente</Button>
            </div>
        </div>
      </Card>
    </div>
  </div>
</DashboardLayout>
