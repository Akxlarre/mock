---

<DashboardLayout title="Gestión de Ex-Alumnos" userRole="secretaria">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center gap-2 text-sm text-secondary mb-2">
      <a href="/secretaria/dashboard" class="hover:text-gray-900">Inicio</a>
      <span>/</span>
      <a href="/secretaria/alumnos" class="hover:text-gray-900">Alumnos</a>
      <span>/</span>
      <span class="text-gray-900 font-medium">Ex-Alumnos</span>
    </div>
    <div class="flex items-start justify-between gap-4">
      <div>
        <h1 class="text-3xl font-semibold text-gray-900 tracking-tight text-balance">Gestión de Ex-Alumnos</h1>
        <p class="text-secondary mt-1">Archivo histórico, búsqueda avanzada y estado de cuenta de egresados</p>
      </div>
      <div class="flex gap-2 shrink-0">
        <Button variant="secondary" onClick="alert('Exportar historial completo (mockup)')">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/></svg>
          Exportar
        </Button>
        <Button href="/secretaria/alumnos" variant="secondary">← Activos</Button>
      </div>
    </div>
  </div>

  <!-- Stats rápidas -->
  <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mb-8">
    <div class="border border-gray-200 rounded-lg bg-white p-4 shadow-sm text-center">
      <p class="text-2xl font-bold text-gray-900">{totalEgresados}</p>
      <p class="text-xs text-gray-500 mt-1">Total egresados</p>
    </div>
    <div class="border border-indigo-100 rounded-lg bg-indigo-50 p-4 text-center">
      <p class="text-2xl font-bold text-indigo-700">{egresadosClaseB}</p>
      <p class="text-xs text-indigo-600 mt-1">Egresados Clase B</p>
    </div>
    <div class="border border-violet-100 rounded-lg bg-violet-50 p-4 text-center">
      <p class="text-2xl font-bold text-violet-700">{egresadosClaseProf}</p>
      <p class="text-xs text-violet-600 mt-1">Egresados Clase Profesional</p>
    </div>
    <div class="border border-amber-100 rounded-lg bg-amber-50 p-4 text-center">
      <p class="text-2xl font-bold text-amber-700">{conSaldoPendiente}</p>
      <p class="text-xs text-amber-600 mt-1">Con abono pendiente</p>
    </div>
  </div>

  <!-- ═══════════════════════════════════════════════
       SECCIÓN PRINCIPAL: ARCHIVO HISTÓRICO
  ═══════════════════════════════════════════════ -->
  <div class="mb-10">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Archivo Histórico de Egresados</h2>

    <!-- Panel de filtros -->
    <Card class="mb-4">
      <div class="flex flex-wrap gap-3 items-end">
        <!-- Búsqueda libre -->
        <div class="flex-1 min-w-48">
          <label class="block text-xs font-medium text-gray-600 mb-1">Buscar por nombre, RUT o Nº Cert. C. Moneda</label>
          <div class="relative">
            <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
            <input
              id="filtro-busqueda"
              type="text"
              placeholder="Ej: Carlos Soto, CM-2026-00342..."
              class="w-full pl-9 pr-4 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-1"
              oninput="aplicarFiltros()"
            />
          </div>
        </div>

        <!-- Filtro año egreso -->
        <div class="min-w-36">
          <label class="block text-xs font-medium text-gray-600 mb-1">Año de egreso</label>
          <select
            id="filtro-ano"
            class="w-full py-2 pl-3 pr-8 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-1 bg-white"
            onchange="aplicarFiltros()"
          >
            <option value="">Todos los años</option>
            {anosDisponibles.map(ano => <option value={ano}>{ano}</option>)}
          </select>
        </div>

        <!-- Filtro tipo licencia -->
        <div class="min-w-36">
          <label class="block text-xs font-medium text-gray-600 mb-1">Tipo de licencia</label>
          <select
            id="filtro-licencia"
            class="w-full py-2 pl-3 pr-8 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-1 bg-white"
            onchange="aplicarFiltros()"
          >
            <option value="">Todas</option>
            <option value="B">Clase B (Auto)</option>
            <option value="A2">A2</option>
            <option value="A3">A3</option>
            <option value="A4">A4</option>
            <option value="A5">A5</option>
          </select>
        </div>

        <!-- Filtro estado de cuenta -->
        <div class="min-w-40">
          <label class="block text-xs font-medium text-gray-600 mb-1">Estado de cuenta</label>
          <select
            id="filtro-estado"
            class="w-full py-2 pl-3 pr-8 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-1 bg-white"
            onchange="aplicarFiltros()"
          >
            <option value="">Todos</option>
            <option value="al_dia">Al día</option>
            <option value="pendiente">Con abono pendiente</option>
          </select>
        </div>

        <!-- Limpiar -->
        <button
          onclick="limpiarFiltros()"
          class="py-2 px-3 text-sm font-medium text-gray-600 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 shadow-sm transition-colors whitespace-nowrap"
        >
          Limpiar filtros
        </button>
      </div>

      <!-- Contador resultados -->
      <div class="mt-3 pt-3 border-t border-gray-100 flex items-center justify-between">
        <p id="contador-resultados" class="text-xs text-gray-500">Mostrando <span id="count-num" class="font-semibold text-gray-700">{exAlumnos.length}</span> egresados</p>
        <p class="text-xs text-gray-400">Haz clic en una fila para ver el estado de cuenta detallado</p>
      </div>
    </Card>

    <!-- Tabla de egresados -->
    <div class="border border-gray-200 rounded-lg bg-white shadow-sm overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full text-sm" id="tabla-egresados">
          <thead class="bg-gray-50 border-b border-gray-200">
            <tr>
              <th class="text-left py-3 px-4 text-xs font-semibold text-gray-600 uppercase tracking-wide">Egresado</th>
              <th class="text-center py-3 px-3 text-xs font-semibold text-gray-600 uppercase tracking-wide">Licencia</th>
              <th class="text-center py-3 px-3 text-xs font-semibold text-gray-600 uppercase tracking-wide">Año</th>
              <th class="text-left py-3 px-3 text-xs font-semibold text-gray-600 uppercase tracking-wide">Sede</th>
              <th class="text-left py-3 px-3 text-xs font-semibold text-gray-600 uppercase tracking-wide">Nº Cert. Casa de Moneda</th>
              <th class="text-center py-3 px-3 text-xs font-semibold text-gray-600 uppercase tracking-wide">Estado Cuenta</th>
              <th class="text-center py-3 px-3 text-xs font-semibold text-gray-600 uppercase tracking-wide"></th>
            </tr>
          </thead>
          <tbody id="tbody-egresados" class="divide-y divide-gray-100">
            {exAlumnos.map((alumno) => {
              const esProfesional = alumno.tipoLicencia !== "B";
              const estadoBadge =
                alumno.estadoCuenta.estado === "al_dia"
                  ? "bg-green-100 text-green-800"
                  : "bg-amber-100 text-amber-800";
              const estadoLabel =
                alumno.estadoCuenta.estado === "al_dia"
                  ? "Al día"
                  : `Debe $${alumno.estadoCuenta.monto.toLocaleString("es-CL")}`;
              const licenseBg =
                alumno.tipoLicencia === "B" ? "bg-indigo-100 text-indigo-700" : "bg-orange-100 text-orange-700";

              return (
                <>
                  <tr
                    class="hover:bg-gray-50 transition-colors cursor-pointer fila-alumno"
                    data-id={alumno.id}
                    data-ano={alumno.anoEgreso}
                    data-licencia={alumno.tipoLicencia}
                    data-estado={alumno.estadoCuenta.estado}
                    data-busqueda={`${alumno.nombre} ${alumno.rut} ${alumno.nroCertCasaMoneda ?? ""}`.toLowerCase()}
                    onclick={`toggleDetalle(${alumno.id})`}
                  >
                    <td class="py-3 px-4">
                      <p class="font-medium text-gray-900">{alumno.nombre}</p>
                      <p class="text-xs text-gray-400 font-mono">{alumno.rut}</p>
                    </td>
                    <td class="py-3 px-3 text-center">
                      <span class={`inline-flex items-center px-2 py-0.5 text-xs font-semibold rounded ${licenseBg}`}>
                        {alumno.tipoLicencia}
                      </span>
                    </td>
                    <td class="py-3 px-3 text-center text-sm text-gray-700 font-medium">{alumno.anoEgreso}</td>
                    <td class="py-3 px-3">
                      <p class="text-xs text-gray-600">{alumno.sede}</p>
                      <p class="text-xs text-gray-400">{alumno.fechaEgreso}</p>
                    </td>
                    <td class="py-3 px-3">
                      {!esProfesional ? (
                        <span class="text-xs text-gray-300 italic">No aplica</span>
                      ) : alumno.nroCertCasaMoneda ? (
                        <span class="text-xs font-mono text-gray-700 bg-gray-100 px-2 py-0.5 rounded">
                          {alumno.nroCertCasaMoneda}
                        </span>
                      ) : (
                        <span class="text-xs text-orange-500 italic">Pendiente</span>
                      )}
                    </td>
                    <td class="py-3 px-3 text-center">
                      <span class={`inline-flex items-center px-2 py-0.5 text-xs font-semibold rounded-full ${estadoBadge}`}>
                        {estadoLabel}
                      </span>
                    </td>
                    <td class="py-3 px-3 text-center">
                      <svg
                        id={`chevron-${alumno.id}`}
                        class="w-4 h-4 text-gray-400 mx-auto transition-transform duration-200"
                        fill="none" stroke="currentColor" viewBox="0 0 24 24"
                      >
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 9l-7 7-7-7"/>
                      </svg>
                    </td>
                  </tr>

                  <!-- Fila de detalle estado de cuenta (colapsable) -->
                  <tr id={`detalle-${alumno.id}`} class="hidden fila-detalle bg-gray-50">
                    <td colspan="7" class="px-6 py-4">
                      <div class="flex flex-wrap gap-8 items-start">
                        <!-- Datos del egresado -->
                        <div class="min-w-48">
                          <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Datos del egresado</p>
                          <div class="space-y-1 text-xs text-gray-600">
                            <p><span class="text-gray-400">Sede:</span> {alumno.sede}</p>
                            <p><span class="text-gray-400">Egreso:</span> {alumno.fechaEgreso}</p>
                            <p><span class="text-gray-400">Licencia:</span> Clase {alumno.tipoLicencia}</p>
                            {esProfesional && alumno.nroCertCasaMoneda && (
                              <p><span class="text-gray-400">Cert. Casa de Moneda:</span> <span class="font-mono">{alumno.nroCertCasaMoneda}</span></p>
                            )}
                            {esProfesional && !alumno.nroCertCasaMoneda && (
                              <p><span class="text-gray-400">Cert. Casa de Moneda:</span> <span class="text-orange-500">Pendiente</span></p>
                            )}
                          </div>
                        </div>

                        <!-- Estado de cuenta -->
                        <div class="flex-1 min-w-64">
                          <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Estado de cuenta</p>
                          {alumno.estadoCuenta.estado === "al_dia" ? (
                            <div class="flex items-center gap-2 text-green-700 text-sm">
                              <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                              </svg>
                              <span class="font-medium">Sin deudas pendientes</span>
                            </div>
                          ) : (
                            <div class="space-y-2">
                              {alumno.estadoCuenta.detalle.map(item => (
                                <div class="flex items-center justify-between text-xs px-3 py-2 rounded-lg border bg-amber-50 border-amber-200">
                                  <div>
                                    <p class="font-medium text-amber-800">{item.concepto}</p>
                                    <p class="text-amber-600">Vencimiento: {item.fecha}</p>
                                  </div>
                                  <span class="font-bold text-sm ml-4 text-amber-700">
                                    ${item.monto.toLocaleString("es-CL")}
                                  </span>
                                </div>
                              ))}
                              <div class="flex justify-between items-center pt-1 text-sm font-semibold text-amber-700">
                                <span>Total pendiente:</span>
                                <span>${alumno.estadoCuenta.monto.toLocaleString("es-CL")}</span>
                              </div>
                            </div>
                          )}
                        </div>

                        <!-- Acciones -->
                        <div class="flex flex-col gap-2">
                          <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-1">Acciones</p>
                          {alumno.estadoCuenta.estado === "pendiente" && (
                            <button
                              onclick={`alert('Registrar pago para ${alumno.nombre}\\n(mockup)')`}
                              class="text-xs px-3 py-1.5 bg-amber-600 text-white rounded-lg hover:bg-amber-700 transition-colors font-medium"
                            >
                              Registrar pago
                            </button>
                          )}
