<script>
  // ─── Lógica de filtros ───────────────────────────────────────────
  function aplicarFiltros() {
    const busqueda  = (document.getElementById('filtro-busqueda') as HTMLInputElement).value.toLowerCase().trim();
    const ano       = (document.getElementById('filtro-ano') as HTMLSelectElement).value;
    const licencia  = (document.getElementById('filtro-licencia') as HTMLSelectElement).value;
    const estado    = (document.getElementById('filtro-estado') as HTMLSelectElement).value;

    const filasPrincipales = document.querySelectorAll<HTMLTableRowElement>('.fila-alumno');
    let visible = 0;

    filasPrincipales.forEach(fila => {
      const idAlumno = fila.dataset.id!;
      const filaDetalle = document.getElementById(`detalle-${idAlumno}`);

      const matchBusqueda = !busqueda || fila.dataset.busqueda!.includes(busqueda);
      const matchAno      = !ano       || fila.dataset.ano === ano;
      const matchLicencia = !licencia  || fila.dataset.licencia === licencia;
      const matchEstado   = !estado    || fila.dataset.estado === estado;

      const mostrar = matchBusqueda && matchAno && matchLicencia && matchEstado;
      fila.classList.toggle('hidden', !mostrar);

      // Ocultar también el detalle si la fila principal se oculta
      if (filaDetalle && !mostrar) {
        filaDetalle.classList.add('hidden');
        const chevron = document.getElementById(`chevron-${idAlumno}`);
        if (chevron) chevron.style.transform = '';
      }

      if (mostrar) visible++;
    });

    // Actualizar contador
    const countEl = document.getElementById('count-num');
    if (countEl) countEl.textContent = String(visible);

    // Mostrar/ocultar mensaje vacío
    const sinResultados = document.getElementById('sin-resultados');
    if (sinResultados) sinResultados.classList.toggle('hidden', visible > 0);
  }

  function limpiarFiltros() {
    (document.getElementById('filtro-busqueda') as HTMLInputElement).value = '';
    (document.getElementById('filtro-ano') as HTMLSelectElement).value = '';
    (document.getElementById('filtro-licencia') as HTMLSelectElement).value = '';
    (document.getElementById('filtro-estado') as HTMLSelectElement).value = '';
    aplicarFiltros();
  }

  // ─── Toggle detalle estado de cuenta ────────────────────────────
  function toggleDetalle(id: number) {
    const detalle = document.getElementById(`detalle-${id}`);
    const chevron = document.getElementById(`chevron-${id}`);
    if (!detalle) return;
    const abierto = !detalle.classList.contains('hidden');
    detalle.classList.toggle('hidden', abierto);
    if (chevron) chevron.style.transform = abierto ? '' : 'rotate(180deg)';
  }

  // Exponer funciones globalmente para los handlers inline
  (window as any).aplicarFiltros = aplicarFiltros;
  (window as any).limpiarFiltros = limpiarFiltros;
  (window as any).toggleDetalle  = toggleDetalle;
</script>
