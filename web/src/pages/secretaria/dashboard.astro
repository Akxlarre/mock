---
/**
 * Dashboard Secretaria - Vista principal
 * Matr칤culas, agenda, pagos.
 * Pr칩ximas Clases: muestra estado pendiente | en_curso | finalizada (ver docs/ESTRATEGIA-CLASE-EN-CURSO.md).
 */
import DashboardLayout from "../../layouts/DashboardLayout.astro";
import Card from "../../components/ui/Card.astro";
import Button from "../../components/ui/Button.astro";

/** Comparaci칩n HH:mm; devuelve estado del bloque respecto a la hora actual */
function estadoClase(
  horaInicio: string,
  horaFin: string,
  ahora: string
): "pendiente" | "en_curso" | "finalizada" {
  if (ahora < horaInicio) return "pendiente";
  if (ahora >= horaFin) return "finalizada";
  return "en_curso";
}

// Demo: hora actual fija para que una clase aparezca "En curso". En producci칩n usar new Date() o sesi칩n.
const HORA_ACTUAL_DEMO = "14:15";

const proximasClasesHoy = [
  {
    id: 1,
    horaInicio: "14:00",
    horaFin: "14:45",
    alumno: "Mar칤a Gonz치lez",
    instructor: "Carlos Rojas",
    tipo: "pr치ctica" as const,
  },
  {
    id: 2,
    horaInicio: "15:00",
    horaFin: "16:00",
    promocion: "Enero 2026 - Grupo A",
    instructor: "Ana L칩pez",
    tipo: "te칩rica" as const,
  },
  {
    id: 3,
    horaInicio: "16:30",
    horaFin: "17:15",
    alumno: "Juan P칠rez",
    instructor: "Carlos Rojas",
    tipo: "pr치ctica" as const,
  },
].map((clase) => ({
  ...clase,
  estado: estadoClase(clase.horaInicio, clase.horaFin, HORA_ACTUAL_DEMO),
}));
---

<DashboardLayout
    title="Dashboard"
    userRole="secretaria"
    userName="Patricia Secretaria"
>
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-semibold text-gray-900">Dashboard</h1>
        <p class="text-secondary mt-1">Bienvenida de vuelta, Patricia</p>
    </div>

    <!-- KPIs -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <Card class="p-6">
            <div class="flex items-center justify-between mb-2">
                <p class="text-sm text-secondary">Clases de Hoy</p>
                <div
                    class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center"
                >
                    <svg
                        class="w-5 h-5 text-blue-600"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                        ></path>
                    </svg>
                </div>
            </div>
            <p class="text-3xl font-bold text-gray-900">18</p>
            <p class="text-xs text-secondary mt-1">12 pr치cticas, 6 te칩ricas</p>
        </Card>

        <Card class="p-6">
            <div class="flex items-center justify-between mb-2">
                <p class="text-sm text-secondary">Matr칤culas Pendientes</p>
                <div
                    class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center"
                >
                    <svg
                        class="w-5 h-5 text-orange-600"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                        ></path>
                    </svg>
                </div>
            </div>
            <p class="text-3xl font-bold text-gray-900">7</p>
            <p class="text-xs text-secondary mt-1">Requieren documentos</p>
        </Card>

        <Card class="p-6">
            <div class="flex items-center justify-between mb-2">
                <p class="text-sm text-secondary">Pagos Hoy</p>
                <div
                    class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center"
                >
                    <svg
                        class="w-5 h-5 text-green-600"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                        ></path>
                    </svg>
                </div>
            </div>
            <p class="text-3xl font-bold text-gray-900">$450K</p>
            <p class="text-xs text-green-600 mt-1">5 pagos recibidos</p>
        </Card>
    </div>

    <!-- Main grid -->
    <div class="grid lg:grid-cols-2 gap-6">
        <!-- Tareas pendientes -->
        <Card>
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-semibold text-gray-900">
                    Tareas Pendientes
                </h2>
                <Button href="/tareas/crear" variant="secondary" class="text-sm">
                    <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Crear tarea
                </Button>
            </div>
            <div class="space-y-3">
                {
                    [
                        {
                            titulo: "Validar documentos - Mar칤a Gonz치lez",
                            urgente: true,
                            designadaPorAdmin: true,
                        },
                        {
                            titulo: "Confirmar clase 15:00 - Juan P칠rez",
                            urgente: false,
                            designadaPorAdmin: true,
                        },
                        {
                            titulo: "Registrar pago mensualidad - Ana Mart칤nez",
                            urgente: false,
                            designadaPorAdmin: false,
                        },
                        {
                            titulo: "Actualizar datos SENCE - Pedro Silva",
                            urgente: true,
                            designadaPorAdmin: true,
                        },
                    ].map((tarea) => (
                        <label class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-gray-100 transition-colors">
                            <input
                                type="checkbox"
                                class="mt-1 w-5 h-5 rounded border-gray-300 text-gray-900"
                            />
                            <div class="flex-1 min-w-0">
                                <p
                                    class={`text-sm ${tarea.urgente ? "font-semibold text-gray-900" : "text-gray-700"}`}
                                >
                                    {tarea.titulo}
                                </p>
                                <div class="flex flex-wrap items-center gap-2 mt-1.5">
                                    {tarea.urgente && (
                                        <span class="inline-block px-2 py-0.5 bg-red-100 text-red-800 text-xs font-medium rounded">
                                            Urgente
                                        </span>
                                    )}
                                    {tarea.designadaPorAdmin && (
                                        <span
                                            class="inline-flex items-center gap-1 px-2 py-0.5 bg-gray-200 text-gray-700 text-xs font-medium rounded"
                                            title="Asignada por el administrador"
                                        >
                                            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                                            </svg>
                                            Designada por administrador
                                        </span>
                                    )}
                                </div>
                            </div>
                        </label>
                    ))
                }
            </div>
        </Card>

        <!-- Pr칩ximas clases (hoy) con estado "en curso" -->
        <Card>
            <h2 class="text-lg font-semibold text-gray-900 mb-4">
                Pr칩ximas Clases (Hoy)
            </h2>
            <div class="space-y-3" role="list" aria-label="Clases del d칤a">
                {
                    proximasClasesHoy.map((clase) => {
                        const enCurso = clase.estado === "en_curso";
                        const finalizada = clase.estado === "finalizada";
                        const label =
                            clase.estado === "en_curso"
                                ? `Clase en curso: ${clase.alumno || clase.promocion}`
                                : undefined;
                        return (
                            <a
                                href={`/secretaria/clases/${clase.id}`}
                                role="listitem"
                                aria-current={enCurso ? "true" : undefined}
                                aria-label={label}
                                class={`flex items-center gap-3 p-3 border rounded-lg transition-colors group cursor-pointer ${
                                    enCurso
                                        ? "border-l-4 border-l-blue-500 border-gray-200 bg-blue-50/60 hover:bg-blue-50"
                                        : finalizada
                                          ? "border-gray-200 bg-gray-50/50 opacity-90 hover:bg-gray-100/50"
                                          : "border-gray-200 hover:bg-gray-50 hover:border-gray-300"
                                }`}
                            >
                                <div
                                    class={`w-12 h-12 rounded-lg flex items-center justify-center font-bold text-sm shrink-0 ${
                                        enCurso
                                            ? "bg-blue-600 text-white"
                                            : "bg-gray-900 text-white"
                                    }`}
                                >
                                    {clase.horaInicio}
                                </div>
                                <div class="flex-1 min-w-0">
                                    <div class="flex flex-wrap items-center gap-2">
                                        <p class="text-sm font-medium text-gray-900 truncate">
                                            {clase.alumno || clase.promocion}
                                        </p>
                                        {enCurso && (
                                            <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 border border-blue-200">
                                                <span
                                                    class="w-1.5 h-1.5 rounded-full bg-blue-500 animate-pulse"
                                                    aria-hidden="true"
                                                ></span>
                                                En curso
                                            </span>
                                        )}
                                        {finalizada && (
                                            <span class="text-xs text-gray-500 font-medium">
                                                Finalizada
                                            </span>
                                        )}
                                    </div>
                                    <p class="text-xs text-secondary truncate mt-0.5">
                                        Instructor: {clase.instructor}
                                    </p>
                                </div>
                                <span
                                    class={`text-xs px-2 py-1 rounded-full font-medium shrink-0 ${
                                        clase.tipo === "pr치ctica"
                                            ? "bg-green-100 text-green-800"
                                            : "bg-blue-100 text-blue-800"
                                    }`}
                                    title={clase.tipo === "pr치ctica" ? "Clase pr치ctica" : "Clase te칩rica"}
                                >
                                    {clase.tipo === "pr치ctica" ? "游뚱" : "游닄"}
                                </span>
                                <svg class="w-4 h-4 text-gray-400 shrink-0 group-hover:text-gray-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                </svg>
                            </a>
                        );
                    })
                }
            </div>
        </Card>
    </div>

    <!-- Quick actions -->
    <div class="mt-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">
            Acciones R치pidas
        </h2>
        <div class="grid md:grid-cols-3 gap-4">
            <Button
                href="/matricula/nuevo"
                variant="primary"
                class="justify-center"
            >
                <svg
                    class="w-5 h-5 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"
                    ></path>
                </svg>
                Nueva Matr칤cula
            </Button>
            <Button href="/secretaria/pagos" variant="secondary" class="justify-center">
                <svg
                    class="w-5 h-5 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                    ></path>
                </svg>
                Registrar Pago
            </Button>
            <Button href="/secretaria/agenda" variant="secondary" class="justify-center">
                <svg
                    class="w-5 h-5 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                    ></path>
                </svg>
                Ver Agenda
            </Button>
        </div>
    </div>
</DashboardLayout>

