---
/**
 * Repositorio de Documentos (DMS) - Vista Secretaria
 * Mismo contenido que /documentos pero path /secretaria/documentos → rol secretaria (no puede eliminar)
 */
import DashboardLayout from "../../layouts/DashboardLayout.astro";
import Card from "../../components/ui/Card.astro";
import Button from "../../components/ui/Button.astro";
import UploadDocumentoModal from "../../components/documentos/UploadDocumentoModal.astro";
import { ESCUELA_ACTUAL } from "../../lib/mockData";
import { getCurrentSession } from "../../lib/session";
import {
  DOCUMENTOS_ALUMNO,
  DOCUMENTOS_ESCUELA,
  PLANTILLAS,
  getAlumnosConDocumentos,
  LABELS_TIPO_ALUMNO,
  LABELS_TIPO_ESCUELA,
  LABELS_CATEGORIA_PLANTILLA,
  FORMATO_ICONO,
} from "../../lib/mockDocumentos";

const alumnosConDocs = getAlumnosConDocumentos();
const session = getCurrentSession(Astro.url.pathname);
const puedeEliminar = session.role === "admin";
---

<DashboardLayout title="Repositorio de Documentos (DMS)" escuela={ESCUELA_ACTUAL} userRole="secretaria">
  <div class="mb-8">
    <h1 class="text-3xl font-semibold text-gray-900 tracking-tight">
      Repositorio de Documentos
    </h1>
    <p class="text-secondary mt-1">
      Documentos del alumno y de la escuela centralizados
    </p>
  </div>

  <!-- Tabs -->
  <div class="border-b border-gray-200 mb-6">
    <nav class="flex gap-6" aria-label="Tabs DMS">
      <a href="#tab-alumnos" id="tab-alumnos-link"
        class="tab-link border-b-2 border-blue-600 pb-3 text-sm font-medium text-blue-600">
        Documentos del Alumno
      </a>
      <a href="#tab-escuela" id="tab-escuela-link"
        class="tab-link border-b-2 border-transparent pb-3 text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300">
        Documentos de la Escuela
      </a>
      <a href="#tab-plantillas" id="tab-plantillas-link"
        class="tab-link border-b-2 border-transparent pb-3 text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300 flex items-center gap-1.5">
        Plantillas
        <span class="px-1.5 py-0.5 bg-amber-100 text-amber-800 text-xs font-semibold rounded-full">{PLANTILLAS.length}</span>
      </a>
    </nav>
  </div>

  <!-- Panel: Documentos del Alumno -->
  <div id="panel-alumnos" class="space-y-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <p class="text-sm text-secondary">Contratos firmados, fotos de licencias, hojas de vida, cédulas</p>
      <a href="#modal-subir-alumno" class="inline-flex items-center justify-center h-11 px-4 text-sm font-semibold text-white bg-blue-600 rounded-md hover:bg-blue-700 transition-colors">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path></svg>
        Subir documento
      </a>
    </div>
    <Card>
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Alumnos con documentos</h2>
      <div class="overflow-x-auto">
        <table class="w-full text-sm">
          <thead>
            <tr class="border-b border-gray-200">
              <th class="text-left py-3 px-4 font-semibold text-gray-700">Alumno</th>
              <th class="text-left py-3 px-4 font-semibold text-gray-700">RUT</th>
              <th class="text-center py-3 px-4 font-semibold text-gray-700">Documentos</th>
              <th class="text-right py-3 px-4 font-semibold text-gray-700">Acciones</th>
            </tr>
          </thead>
          <tbody>
            {alumnosConDocs.map((a) => (
              <tr class="border-b border-gray-100 hover:bg-gray-50">
                <td class="py-3 px-4 font-medium text-gray-900">{a.nombre}</td>
                <td class="py-3 px-4 text-gray-600">{a.rut}</td>
                <td class="py-3 px-4 text-center">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">{a.cantidad} documento(s)</span>
                </td>
                <td class="py-3 px-4 text-right">
                  <a href={`/secretaria/documentos/alumnos/${a.alumnoId}`} class="text-blue-600 hover:text-blue-800 font-medium text-sm">Ver →</a>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </Card>
    <Card>
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Últimos documentos subidos</h2>
      <ul class="divide-y divide-gray-200">
        {DOCUMENTOS_ALUMNO.slice(0, 5).map((doc) => (
          <li class="flex items-center justify-between py-3">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center shrink-0">
                <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
              </div>
              <div>
                <p class="font-medium text-gray-900">{doc.nombreArchivo}</p>
                <p class="text-xs text-secondary">{doc.alumnoNombre} · {LABELS_TIPO_ALUMNO[doc.tipo]} · {doc.fechaSubida}</p>
              </div>
            </div>
            <div class="flex items-center gap-2">
              <Button variant="ghost" class="text-sm" onClick="alert('Ver documento (mockup)')">Ver</Button>
            </div>
          </li>
        ))}
      </ul>
    </Card>
  </div>

  <!-- Panel: Documentos de la Escuela -->
  <div id="panel-escuela" class="hidden space-y-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <p class="text-sm text-secondary">Facturas de folios, resoluciones MTT, decretos</p>
      <a href="#modal-subir-escuela" class="inline-flex items-center justify-center h-11 px-4 text-sm font-semibold text-white bg-blue-600 rounded-md hover:bg-blue-700 transition-colors">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path></svg>
        Subir documento
      </a>
    </div>
    <Card>
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Documentos institucionales</h2>
      <ul class="divide-y divide-gray-200">
        {DOCUMENTOS_ESCUELA.map((doc) => (
          <li class="flex items-center justify-between py-4">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-red-50 rounded-lg flex items-center justify-center shrink-0">
                <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
              </div>
              <div>
                <p class="font-medium text-gray-900">{doc.nombreArchivo}</p>
                <p class="text-xs text-secondary">{LABELS_TIPO_ESCUELA[doc.tipo]}{doc.descripcion ? ` · ${doc.descripcion}` : ""}</p>
                <p class="text-xs text-gray-500 mt-0.5">Subido el {doc.fechaSubida} por {doc.subidoPor}</p>
              </div>
            </div>
            <div class="flex items-center gap-2">
              <Button variant="ghost" class="text-sm" onClick="alert('Ver documento (mockup)')">Ver</Button>
            </div>
          </li>
        ))}
      </ul>
    </Card>
  </div>

  <!-- Panel: Plantillas -->
  <div id="panel-plantillas" class="hidden space-y-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <p class="text-sm text-secondary">Formularios y contratos estándar listos para descargar, completar y subir al expediente del alumno</p>
    </div>

    <!-- Filtro por categoría -->
    <div class="flex flex-wrap gap-2">
      <button type="button" class="filtro-plantilla active px-3 py-1.5 text-xs font-medium rounded-full bg-gray-900 text-white" data-categoria="all">Todas</button>
      <button type="button" class="filtro-plantilla px-3 py-1.5 text-xs font-medium rounded-full bg-gray-100 text-gray-700 hover:bg-gray-200" data-categoria="clase_b">Clase B</button>
      <button type="button" class="filtro-plantilla px-3 py-1.5 text-xs font-medium rounded-full bg-gray-100 text-gray-700 hover:bg-gray-200" data-categoria="clase_profesional">Clase Profesional</button>
      <button type="button" class="filtro-plantilla px-3 py-1.5 text-xs font-medium rounded-full bg-gray-100 text-gray-700 hover:bg-gray-200" data-categoria="administrativo">Administrativo</button>
      <button type="button" class="filtro-plantilla px-3 py-1.5 text-xs font-medium rounded-full bg-gray-100 text-gray-700 hover:bg-gray-200" data-categoria="general">General</button>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4" id="grid-plantillas">
      {PLANTILLAS.map((pl) => {
        const icono = FORMATO_ICONO[pl.formato];
        return (
          <div class="plantilla-card border border-gray-200 rounded-xl p-5 bg-white hover:border-gray-300 hover:shadow-sm transition-all flex flex-col gap-4" data-categoria={pl.categoria}>
            <div class="flex items-start gap-3">
              <div class={`w-10 h-10 rounded-lg flex items-center justify-center shrink-0 font-bold text-xs ${icono.color}`}>
                {pl.formato.toUpperCase()}
              </div>
              <div class="flex-1 min-w-0">
                <p class="font-semibold text-gray-900 text-sm leading-snug">{pl.nombre}</p>
                <span class="inline-block mt-1 text-xs text-gray-500 bg-gray-100 px-2 py-0.5 rounded-full">
                  {LABELS_CATEGORIA_PLANTILLA[pl.categoria]}
                </span>
              </div>
            </div>
            <p class="text-xs text-secondary leading-relaxed flex-1">{pl.descripcion}</p>
            <div class="flex items-center justify-between pt-1 border-t border-gray-100">
              <div class="text-xs text-gray-400">
                <span>{pl.version}</span>
                <span class="mx-1">·</span>
                <span>{pl.descargas} descargas</span>
              </div>
              <button type="button" class="inline-flex items-center gap-1 text-xs font-semibold text-blue-600 hover:text-blue-800"
                onclick="alert('Descargando plantilla (mockup)')">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                </svg>
                Descargar
              </button>
            </div>
          </div>
        );
      })}
    </div>

    <!-- Nota informativa -->
    <Card class="border-amber-100 bg-amber-50/40">
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-amber-600 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
          <p class="text-sm font-medium text-amber-900">Cómo usar las plantillas</p>
          <p class="text-xs text-amber-800 mt-1">Descarga el documento, complétalo con los datos del alumno e imprímelo. Una vez firmado, súbelo al expediente del alumno desde la pestaña <strong>Documentos del Alumno</strong>.</p>
        </div>
      </div>
    </Card>
  </div>

  <UploadDocumentoModal id="modal-subir-alumno" titulo="Subir documento de alumno" tipo="alumno" alumnosOpciones={alumnosConDocs.map((a) => ({ id: a.alumnoId, nombre: a.nombre }))} />
  <UploadDocumentoModal id="modal-subir-escuela" titulo="Subir documento de la escuela" tipo="escuela" />

  <Card class="mb-6 border-blue-50 bg-blue-50/30">
    <div class="flex items-start gap-3">
      <svg class="w-5 h-5 text-blue-600 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
      <div>
        <p class="text-sm font-medium text-blue-900">Permisos DMS</p>
        <p class="text-xs text-blue-800 mt-1"><strong>Secretaria:</strong> Solo subir y visualizar (no puede eliminar documentos).</p>
      </div>
    </div>
  </Card>
</DashboardLayout>

<script>
  document.addEventListener("astro:page-load", () => {
    const tabs = {
      alumnos:    { link: document.getElementById("tab-alumnos-link"),    panel: document.getElementById("panel-alumnos")    },
      escuela:    { link: document.getElementById("tab-escuela-link"),    panel: document.getElementById("panel-escuela")    },
      plantillas: { link: document.getElementById("tab-plantillas-link"), panel: document.getElementById("panel-plantillas") },
    };

    type Tab = keyof typeof tabs;

    function showTab(active: Tab) {
      for (const [key, { link, panel }] of Object.entries(tabs) as [Tab, typeof tabs[Tab]][]) {
        if (!link || !panel) continue;
        const isActive = key === active;
        link.classList.toggle("border-blue-600", isActive);
        link.classList.toggle("text-blue-600", isActive);
        link.classList.toggle("border-transparent", !isActive);
        link.classList.toggle("text-gray-500", !isActive);
        panel.classList.toggle("hidden", !isActive);
      }
    }

    tabs.alumnos.link?.addEventListener("click",    (e) => { e.preventDefault(); showTab("alumnos"); });
    tabs.escuela.link?.addEventListener("click",    (e) => { e.preventDefault(); showTab("escuela"); });
    tabs.plantillas.link?.addEventListener("click", (e) => { e.preventDefault(); showTab("plantillas"); });

    const hash = window.location.hash;
    if (hash === "#tab-escuela")         showTab("escuela");
    else if (hash === "#tab-plantillas") showTab("plantillas");

    // Filtro por categoría
    const filtros = document.querySelectorAll<HTMLButtonElement>(".filtro-plantilla");
    const cards   = document.querySelectorAll<HTMLElement>(".plantilla-card");

    filtros.forEach((btn) => {
      btn.addEventListener("click", () => {
        const cat = btn.dataset.categoria;
        filtros.forEach((b) => {
          b.classList.remove("bg-gray-900", "text-white");
          b.classList.add("bg-gray-100", "text-gray-700");
        });
        btn.classList.add("bg-gray-900", "text-white");
        btn.classList.remove("bg-gray-100", "text-gray-700");
        cards.forEach((card) => {
          card.classList.toggle("hidden", cat !== "all" && card.dataset.categoria !== cat);
        });
      });
    });
  });
</script>
