---
/**
 * Libro de Clases Digital (Mineduc)
 * Simulaci贸n de generaci贸n de libro digital
 */
import DashboardLayout from "../layouts/DashboardLayout.astro";
import Card from "../components/ui/Card.astro";
---

<DashboardLayout title="Libro de Clases Digital" userRole="admin">
  <div class="mb-8">
    <div class="flex items-center gap-2 text-sm text-secondary mb-2">
      <a href="/dashboard" class="hover:text-gray-900">Inicio</a>
      <span>/</span>
      <span class="text-gray-900 font-medium">Libro de Clases</span>
    </div>
    <h1 class="text-3xl font-semibold text-gray-900">Libro de Clases Digital (Mineduc)</h1>
    <p class="text-secondary mt-1">Generaci贸n oficial de registros de asistencia y actividades</p>
  </div>

  <div class="flex items-center justify-center p-8">
    <Card class="w-full max-w-2xl text-center p-12">
      <div class="mb-8 flex justify-center text-blue-100">
        <svg class="w-24 h-24 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
      </div>
      
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Generar Libro de Clases</h2>
      <p class="text-gray-600 mb-8 max-w-md mx-auto">
        Esta acci贸n recopila toda la informaci贸n de asistencia, evaluaciones y actividades del periodo actual para generar el documento oficial XML/PDFcompliant con Mineduc.
      </p>

      <div x-data="{ generating: false }">
        <button
          @click="
            generating = true;
            setTimeout(() => {
              generating = false;
              alert('Libro generado exitosamente');
            }, 2000)
          "
          class="w-full sm:w-auto inline-flex items-center justify-center px-8 py-4 border border-transparent text-xl font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all disabled:opacity-75 disabled:cursor-wait"
          :disabled="generating"
        >
          <span x-show="!generating" class="flex items-center gap-2">
             Generar Libro de Clases
          </span>
          <span x-show="generating" class="flex items-center gap-2" style="display: none;">
            <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            Generando...
          </span>
        </button>
      </div>
      
      <p class="text-xs text-gray-400 mt-6">
        * El proceso puede tardar unos segundos dependiendo del volumen de datos.
      </p>
    </Card>
  </div>
</DashboardLayout>
