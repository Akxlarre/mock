---
import DashboardLayout from "../layouts/DashboardLayout.astro";
import Button from "../components/ui/Button.astro";
import Input from "../components/ui/Input.astro";
---

<DashboardLayout title="Detalle Libro de Clases">
  <div class="space-y-8">
    <!-- Header -->
    <header class="flex justify-between items-center bg-white p-6 rounded-xl border border-gray-200 shadow-sm">
      <h1 class="text-3xl font-bold text-gray-900 tracking-tighter">
        Curso Clase B - 15 de Marzo
      </h1>
      <div class="flex items-center gap-3">
        <Button variant="ghost" href="/academico/libros/historial">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Ver Historial
        </Button>
        <Button variant="secondary">
          Cambiar Estado
        </Button>
      </div>
    </header>

    <!-- Barra de Pestañas (Tabs de Navegación) -->
    <nav class="bg-white rounded-xl border border-gray-200 shadow-sm">
      <div class="overflow-x-auto">
        <div class="flex min-w-max border-b border-gray-200">
          <a href="#" class="px-6 py-3.5 text-sm font-semibold text-gray-900 border-b-[3px] border-blue-600 whitespace-nowrap transition-colors">
            Clase B
          </a>
          <a href="#" class="px-6 py-3.5 text-sm font-medium text-gray-400 border-b-[3px] border-transparent hover:text-gray-700 hover:border-gray-300 whitespace-nowrap transition-colors">
            Clase A2
          </a>
          <a href="#" class="px-6 py-3.5 text-sm font-medium text-gray-400 border-b-[3px] border-transparent hover:text-gray-700 hover:border-gray-300 whitespace-nowrap transition-colors">
            Clase A3
          </a>
          <a href="#" class="px-6 py-3.5 text-sm font-medium text-gray-400 border-b-[3px] border-transparent hover:text-gray-700 hover:border-gray-300 whitespace-nowrap transition-colors">
            Clase A4
          </a>
          <a href="#" class="px-6 py-3.5 text-sm font-medium text-gray-400 border-b-[3px] border-transparent hover:text-gray-700 hover:border-gray-300 whitespace-nowrap transition-colors">
            Clase A5
          </a>
          <a href="#" class="px-6 py-3.5 text-sm font-medium text-gray-400 border-b-[3px] border-transparent hover:text-gray-700 hover:border-gray-300 whitespace-nowrap transition-colors">
            Convalidaciones
          </a>
        </div>
      </div>
    </nav>

    <!-- Stepper / Barra de Progreso -->
    <section class="bg-white p-8 rounded-xl border border-gray-200 shadow-sm">
      <div class="relative flex justify-between">
        <!-- Progress Line BG -->
        <div class="absolute top-5 left-0 w-full h-0.5 bg-gray-100 -z-0"></div>
        
        <!-- Steps -->
        <div class="relative z-10 flex flex-col items-center group">
          <div class="w-10 h-10 rounded-full bg-gray-100 border-2 border-gray-200 flex items-center justify-center mb-2">
            <span class="text-sm font-semibold text-gray-500">1</span>
          </div>
          <span class="text-sm font-medium text-gray-500">Borrador</span>
        </div>

        <div class="relative z-10 flex flex-col items-center">
          <div class="w-10 h-10 rounded-full bg-green-100 border-2 border-green-500 flex items-center justify-center mb-2 shadow-sm ring-4 ring-green-50">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-600" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
          </div>
          <span class="text-sm font-bold text-green-700">Activo</span>
        </div>

        <div class="relative z-10 flex flex-col items-center">
          <div class="w-10 h-10 rounded-full bg-white border-2 border-gray-200 flex items-center justify-center mb-2">
            <span class="text-sm font-semibold text-gray-400">3</span>
          </div>
          <span class="text-sm font-medium text-gray-400">En Revisión</span>
        </div>

        <div class="relative z-10 flex flex-col items-center">
          <div class="w-10 h-10 rounded-full bg-white border-2 border-gray-200 flex items-center justify-center mb-2">
            <span class="text-sm font-semibold text-gray-400">4</span>
          </div>
          <span class="text-sm font-medium text-gray-400">Cerrado/Histórico</span>
        </div>
      </div>
    </section>

    <!-- Panel de Controles -->
    <section class="flex flex-col md:flex-row gap-4 items-center justify-between">
      <div class="w-full md:w-96">
        <Input 
          type="text" 
          placeholder="Buscar por RUT o Nombre..." 
          id="search-students"
        />
      </div>
      <Button variant="primary" class="w-full md:w-auto">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Agregar Alumno
      </Button>
    </section>

    <!-- Tabla Principal -->
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
      <table class="w-full text-left border-collapse">
        <thead class="bg-gray-50 border-b border-gray-200">
          <tr>
            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">N°</th>
            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">RUT</th>
            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">Apellido Paterno - Apellido Materno - Nombres</th>
            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">Teléfono</th>
            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider">Estado</th>
            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-right">Acciones</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <tr class="hover:bg-gray-50 transition-colors">
            <td class="px-6 py-4 text-sm text-gray-600">1</td>
            <td class="px-6 py-4 text-sm font-mono text-gray-900">12.345.678-9</td>
            <td class="px-6 py-4 text-sm font-medium text-gray-900">González Pérez Juan Alberto</td>
            <td class="px-6 py-4 text-sm text-gray-600">+56 9 8765 4321</td>
            <td class="px-6 py-4">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                Al Día
              </span>
            </td>
            <td class="px-6 py-4 text-right space-x-2">
              <button class="p-2 text-gray-400 hover:text-blue-600 transition-colors" title="Editar">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
              </button>
              <button class="p-2 text-gray-400 hover:text-red-600 transition-colors" title="Eliminar">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              </button>
            </td>
          </tr>
          <tr class="hover:bg-gray-50 transition-colors">
            <td class="px-6 py-4 text-sm text-gray-600">2</td>
            <td class="px-6 py-4 text-sm font-mono text-gray-900">9.876.543-1</td>
            <td class="px-6 py-4 text-sm font-medium text-gray-900">Muñoz Soto María Ignacia</td>
            <td class="px-6 py-4 text-sm text-gray-600">+56 9 1234 5678</td>
            <td class="px-6 py-4">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-800">
                Pendiente
              </span>
            </td>
            <td class="px-6 py-4 text-right space-x-2">
              <button class="p-2 text-gray-400 hover:text-blue-600 transition-colors" title="Editar">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
              </button>
              <button class="p-2 text-gray-400 hover:text-red-600 transition-colors" title="Eliminar">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              </button>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</DashboardLayout>
