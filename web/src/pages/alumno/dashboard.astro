<script>
  document.addEventListener("astro:page-load", () => {
    // â”€â”€ Tab switching â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    const tabBtns  = document.querySelectorAll<HTMLButtonElement>(".tab-btn");
    const panels: Record<string, HTMLElement | null> = {
      resumen:     document.getElementById("panel-resumen"),
      claseb:      document.getElementById("panel-claseb"),
      profesional: document.getElementById("panel-profesional"),
      pagos:       document.getElementById("panel-pagos"),
    };

    function activateTab(id: string) {
      tabBtns.forEach(btn => {
        const isActive = btn.dataset.tab === id;
        btn.classList.toggle("border-blue-600", isActive);
        btn.classList.toggle("text-blue-600",   isActive);
        btn.classList.toggle("border-transparent", !isActive);
        btn.classList.toggle("text-gray-500",    !isActive);
      });
      Object.entries(panels).forEach(([key, el]) => {
        el?.classList.toggle("hidden", key !== id);
      });
    }

    tabBtns.forEach(btn => {
      btn.addEventListener("click", () => activateTab(btn.dataset.tab!));
    });

    // Botones "Ir a tab" desde el Resumen
    document.querySelectorAll<HTMLElement>(".goto-tab").forEach(btn => {
      btn.addEventListener("click", () => activateTab(btn.dataset.goto!));
    });
  });
</script>
