 */
import DashboardLayout from "../../../layouts/DashboardLayout.astro";
import Card from "../../../components/ui/Card.astro";
import Button from "../../../components/ui/Button.astro";
import { getInstructorById } from "../../../lib/mockInstructors";
import { ESCUELA_ACTUAL } from "../../../lib/mockData";

export function getStaticPaths() {
    return [
        { params: { id: "1" } },
        { params: { id: "2" } },
        { params: { id: "3" } },
        { params: { id: "4" } },
        { params: { id: "5" } },
    ];
}

const { id } = Astro.params;
const instructor = getInstructorById(parseInt(id!));

if (!instructor) {
    return Astro.redirect("/instructores/horas");
}

// Mes actual
const mesActual = "febrero2026";
