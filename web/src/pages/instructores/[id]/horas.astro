        horas: 2,
        alumno: "Promoci√≥n Enero - Grupo A",
    },
    {
        fecha: "2026-02-03",
        tipo: "pr√°ctica",
        horas: 1.5,
        alumno: "Mar√≠a Gonz√°lez",
    },
    { fecha: "2026-02-03", tipo: "pr√°ctica", horas: 1.5, alumno: "Juan P√©rez" },
    {
        fecha: "2026-02-04",
        tipo: "pr√°ctica",
        horas: 1.5,
        alumno: "Ana Mart√≠nez",
    },
    {
        fecha: "2026-02-04",
        tipo: "te√≥rica",
        horas: 2,
        alumno: "Promoci√≥n Enero - Grupo B",
    },
];

// Comparativo mensual (√∫ltimos 5 meses) - usar datos reales del instructor
const meses = ["diciembre2025", "enero2026", "febrero2026"];
const comparativoMeses = [
    {
        mes: "Octubre",
        teoricas: instructor.tipo !== "practico" ? 20 : 0,
        practicas: instructor.tipo !== "teorico" ? 25 : 0,
    },
    {
        mes: "Noviembre",
        teoricas: instructor.tipo !== "practico" ? 22 : 0,
        practicas: instructor.tipo !== "teorico" ? 28 : 0,
    },
    {
        mes: "Diciembre",
        teoricas: instructor.horasMensuales["diciembre2025"]?.teoricas || 0,
        practicas: instructor.horasMensuales["diciembre2025"]?.practicas || 0,
    },
    {
        mes: "Enero",
        teoricas: instructor.horasMensuales["enero2026"]?.teoricas || 0,
        practicas: instructor.horasMensuales["enero2026"]?.practicas || 0,
    },
    {
        mes: "Febrero",
        teoricas: instructor.horasMensuales["febrero2026"]?.teoricas || 0,
        practicas: instructor.horasMensuales["febrero2026"]?.practicas || 0,
    },
];

// Calcular comparativa vs mes anterior
const horasMesAnterior = instructor.horasMensuales["enero2026"]?.totalEquivalente || 0;
const horasActual = horasMes.totalEquivalente;
const porcentajeCambio =
    horasMesAnterior > 0
        ? Math.round(((horasActual - horasMesAnterior) / horasMesAnterior) * 100)
        : 0;
const direccion = porcentajeCambio > 0 ? "up" : porcentajeCambio < 0 ? "down" : "equal";
---

<DashboardLayout
    title={`Horas ${instructor.nombre} - Instructores`}
    escuela={ESCUELA_ACTUAL}
>
    <div class="max-w-6xl mx-auto">
        <!-- Breadcrumbs -->
        <div class="mb-6">
            <div class="flex items-center gap-2 text-sm text-secondary mb-2">
                <a href="/dashboard" class="hover:text-gray-900">Inicio</a>
                <span>/</span>
                <a href="/instructores" class="hover:text-gray-900"
                    >Instructores</a
                >
                <span>/</span>
                <a href="/instructores/horas" class="hover:text-gray-900"
                    >Horas Trabajadas</a
                >
                <span>/</span>
                <span class="text-gray-900 font-medium"
                    >{instructor.nombre}</span
                >
            </div>
        </div>

        <!-- Header -->
        <div class="mb-8">
            <div
                class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4"
            >
                <div>
                    <h1
                        class="text-3xl font-semibold text-gray-900 tracking-tight"
                    >
                        {instructor.nombre}
                    </h1>
                    <p class="text-secondary mt-1">
                        Instructor {instructor.tipo} ¬∑ {mesActualDisplay}
                    </p>
                </div>

                <div class="flex gap-2">
                    <Button
                        variant="secondary"
                        href={`/instructores/${instructor.id}`}
                    >
                        Ver perfil
                    </Button>
                    <Button variant="primary" href="/instructores/horas">
                        Volver al listado
                    </Button>
                </div>
            </div>
        </div>

        <!-- Stats principales -->
        <div class="grid md:grid-cols-4 gap-4 mb-8">
            {
                instructor.tipo !== "practico" && (
                    <Card class="p-6">
                        <div class="flex items-center gap-3 mb-2">
                            <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                                <span class="text-xl">üìö</span>
                            </div>
                            <div>
                                <p class="text-xs text-secondary">
                                    Horas Te√≥ricas
                                </p>
                                <p class="text-2xl font-bold text-gray-900">
                                    {horasMes.teoricas}
                                </p>
                            </div>
                        </div>
                        <p class="text-xs text-muted">Relator de promociones</p>
                    </Card>
                )
            }

            {
                instructor.tipo !== "teorico" && (
                    <Card class="p-6">
                        <div class="flex items-center gap-3 mb-2">
                            <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                                <span class="text-xl">üöó</span>
                            </div>
                            <div>
                                <p class="text-xs text-secondary">
                                    Sesiones Pr√°cticas
                                </p>
                                <p class="text-2xl font-bold text-gray-900">
                                    {horasMes.practicas}
                                </p>
                            </div>
                        </div>
                        <p class="text-xs text-muted">Clases de conducci√≥n</p>
                    </Card>
                )
            }

            <Card class="p-6">
                <div class="flex items-center gap-3 mb-2">
                    <div
                        class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center"
                    >
                        <span class="text-xl">‚è±Ô∏è</span>
                    </div>
                    <div>
                        <p class="text-xs text-secondary">Total Horas Equiv.</p>
                        <p class="text-2xl font-bold text-gray-900">
                            {horasMes.totalEquivalente}
                        </p>
                    </div>
                </div>
                <p class="text-xs text-muted">Suma total de horas</p>
            </Card>

            <Card
                class="p-6 bg-gradient-to-br from-blue-50 to-purple-50 border-blue-200"
            >
                <div class="flex items-center gap-3 mb-2">
                    <div
                        class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center"
                    >
                        <svg
                            class="w-6 h-6 text-white"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d={direccion === "up"
                                    ? "M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"
                                    : "M13 17h8m0 0V9m0 8l-8-8-4 4-6-6"}></path>
                        </svg>
                    </div>
                    <div>
                        <p class="text-xs text-blue-700">vs Mes Anterior</p>
                        <p class="text-2xl font-bold text-blue-900">
                            {direccion === "up" ? "+" : ""}{porcentajeCambio}%
                        </p>
                    </div>
                </div>
                <p class="text-xs text-blue-700">
                    {
                        direccion === "up"
                            ? "‚Üó Incremento positivo"
                            : direccion === "down"
                              ? "‚Üò Disminuci√≥n"
                              : "‚Üí Sin cambio"
                    }
                </p>
            </Card>
        </div>

        <!-- Gr√°fico comparativo -->
        <div class="grid lg:grid-cols-3 gap-6 mb-8">
            <div class="lg:col-span-2">
                <Card>
                    <h2 class="text-lg font-semibold text-gray-900 mb-4">
                        Evoluci√≥n √öltimos 5 Meses
                    </h2>

                    <!-- Gr√°fico de barras simple -->
                    <div class="space-y-4">
                        {
                            comparativoMeses.map((mes) => {
                                const maxHoras = 80;
                                const totalMes = mes.teoricas + mes.practicas;

                                return (
                                    <div>
                                        <div class="flex items-center justify-between mb-1">
                                            <span class="text-sm font-medium text-gray-700">
                                                {mes.mes}
                                            </span>
                                            <span class="text-sm font-bold text-gray-900">
                                                {totalMes}h
                                            </span>
                                        </div>
                                        <div class="w-full bg-gray-200 rounded-full h-8 overflow-hidden">
                                            <div class="h-full flex">
                                                <div
                                                    class="bg-blue-500 flex items-center justify-center text-xs text-white font-medium"
                                                    style={`width: ${(mes.teoricas / maxHoras) * 100}%`}
                                                    title={`${mes.teoricas}h te√≥ricas`}
                                                >
                                                    {mes.teoricas > 0 &&
                                                        `${mes.teoricas}h T`}
                                                </div>
                                                <div
                                                    class="bg-green-500 flex items-center justify-center text-xs text-white font-medium"
                                                    style={`width: ${(mes.practicas / maxHoras) * 100}%`}
                                                    title={`${mes.practicas}h pr√°cticas`}
                                                >
                                                    {mes.practicas > 0 &&
                                                        `${mes.practicas}h P`}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                );
                            })
                        }
                    </div>

                    <!-- Leyenda -->
                    <div
                        class="flex items-center gap-4 mt-6 pt-4 border-t border-gray-200"
                    >
                        <div class="flex items-center gap-2">
                            <div class="w-4 h-4 bg-blue-500 rounded"></div>
                            <span class="text-xs text-secondary">Te√≥ricas</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <div class="w-4 h-4 bg-green-500 rounded"></div>
                            <span class="text-xs text-secondary">Pr√°cticas</span
                            >
                        </div>
                    </div>
                </Card>
            </div>

            <!-- Stats adicionales -->
            <div class="space-y-4">
