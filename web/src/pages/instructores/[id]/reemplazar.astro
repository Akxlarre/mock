---
/**
 * Gestión de Reemplazos - RF-044
 * Página dedicada para asignar instructores de reemplazo
 */
import DashboardLayout from "../../../layouts/DashboardLayout.astro";
import Card from "../../../components/ui/Card.astro";
import ReplacementManager from "../../../components/admin/ReplacementManager.astro";
import { getInstructorById } from "../../../lib/mockInstructors";
import { ESCUELA_ACTUAL } from "../../../lib/mockData";

export function getStaticPaths() {
  return [
    { params: { id: "1" } },
    { params: { id: "2" } },
    { params: { id: "3" } },
    { params: { id: "4" } },
    { params: { id: "5" } },
  ];
}

const { id } = Astro.params;
const instructor = getInstructorById(parseInt(id!));

if (!instructor) {
  return Astro.redirect("/instructores");
}

// Función helper para formatear fecha
function formatearFecha(fecha: string): string {
  const date = new Date(fecha);
  return date.toLocaleDateString("es-CL", {
    day: "2-digit",
    month: "short",
    year: "numeric",
  });
}
---

<DashboardLayout
  title={`Reemplazos - ${instructor.nombre}`}
  escuela={ESCUELA_ACTUAL}
>
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center gap-2 text-sm text-secondary mb-2">
      <a href="/dashboard" class="hover:text-gray-900">Inicio</a>
      <span>/</span>
      <a href="/instructores" class="hover:text-gray-900">Instructores</a>
      <span>/</span>
      <a href={`/instructores/${id}`} class="hover:text-gray-900"
        >{instructor.nombre}</a
      >
      <span>/</span>
      <span class="text-gray-900 font-medium">Reemplazos</span>
    </div>
    <div
      class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4"
    >
      <div>
        <h1 class="text-3xl font-semibold text-gray-900 tracking-tight">
          Gestión de reemplazos
        </h1>
        <p class="text-secondary mt-1">
          Asignar instructor de reemplazo para {instructor.nombre}
        </p>
      </div>
      <a
        href={`/instructores/${id}`}
        class="inline-flex items-center justify-center h-11 px-4 text-sm font-medium rounded-md bg-white border border-gray-300 text-gray-900 hover:bg-gray-50 hover:border-gray-400 shadow-sm transition-all duration-200"
      >
        <svg
          class="w-4 h-4 mr-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Volver al perfil
      </a>
    </div>
  </div>

  <div class="grid lg:grid-cols-3 gap-6">
    <!-- Main Content: Formulario de Reemplazo -->
    <div class="lg:col-span-2">
      <Card>
        <h2 class="text-lg font-semibold text-gray-900 mb-6">
          Asignar nuevo reemplazo
        </h2>
        <ReplacementManager
          originalInstructorId={instructor.id}
          originalInstructorName={instructor.nombre}
        />
      </Card>

      <!-- Historial de Reemplazos -->
      <Card class="mt-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-6">
          Historial de reemplazos
        </h2>
        {
          instructor.reemplazos.length === 0 ? (
            <div class="text-center py-12">
              <svg
                class="w-16 h-16 mx-auto text-gray-300 mb-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                />
              </svg>
              <p class="text-sm text-gray-500">
                Sin historial de reemplazos
              </p>
              <p class="text-xs text-gray-400 mt-1">
                Los reemplazos asignados aparecerán aquí
              </p>
            </div>
          ) : (
            <div class="overflow-x-auto">
              <table class="w-full">
                <thead>
                  <tr class="bg-gray-50 border-b border-gray-200">
                    <th class="font-semibold text-sm py-3 px-4 text-left text-gray-900">
                      Fecha
                    </th>
                    <th class="font-semibold text-sm py-3 px-4 text-left text-gray-900">
                      Instructor reemplazo
                    </th>
                    <th class="font-semibold text-sm py-3 px-4 text-left text-gray-900">
                      Motivo
                    </th>
                    <th class="font-semibold text-sm py-3 px-4 text-center text-gray-900">
                      Clases
                    </th>
                  </tr>
                </thead>
                <tbody>
                  {instructor.reemplazos.map((reemplazo) => (
                    <tr class="hover:bg-gray-50 border-b border-gray-200 transition-colors">
                      <td class="py-4 px-4 text-sm text-gray-900">
                        {formatearFecha(reemplazo.fecha)}
                      </td>
                      <td class="py-4 px-4">
                        <div>
                          <div class="text-sm font-medium text-gray-900">
                            {reemplazo.nombreReemplazo}
                          </div>
                          <div class="text-xs text-gray-500">
                            ID: {reemplazo.reemplazadoPor}
                          </div>
                        </div>
                      </td>
                      <td class="py-4 px-4">
                        <p class="text-sm text-gray-700 line-clamp-2">
                          {reemplazo.motivo}
                        </p>
                      </td>
                      <td class="py-4 px-4 text-center">
                        <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-blue-100 text-blue-800 text-sm font-medium">
                          {reemplazo.clases.length}
                        </span>
                      </td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          )
        }
      </Card>
    </div>

    <!-- Sidebar: Info del Instructor -->
    <div class="space-y-4">
      <!-- Info del Instructor Original -->
      <Card>
        <h3 class="text-sm font-semibold text-gray-900 mb-4">
          Instructor original
        </h3>
        <div class="space-y-3">
          <div>
            <p class="text-xs text-gray-500 mb-0.5">Nombre</p>
            <p class="text-sm font-medium text-gray-900">{instructor.nombre}</p>
          </div>
          <div>
            <p class="text-xs text-gray-500 mb-0.5">RUT</p>
            <p class="text-sm font-medium text-gray-900">{instructor.rut}</p>
          </div>
          <div>
            <p class="text-xs text-gray-500 mb-0.5">Email</p>
            <p class="text-sm font-medium text-gray-900">{instructor.email}</p>
          </div>
          <div>
            <p class="text-xs text-gray-500 mb-0.5">Tipo</p>
            <p class="text-sm font-medium text-gray-900 capitalize">
              {instructor.tipo}
            </p>
          </div>
          <div>
            <p class="text-xs text-gray-500 mb-0.5">Estado</p>
            {
              instructor.activo ? (
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Activo
                </span>
              ) : (
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  Inactivo
                </span>
              )
            }
          </div>
        </div>
      </Card>

      <!-- Clases Activas -->
      <Card class="bg-blue-50 border-blue-200">
        <h3 class="text-sm font-semibold text-blue-900 mb-3">
          Clases activas
        </h3>
        <p class="text-3xl font-semibold text-blue-900">
          {instructor.clasesActivas}
        </p>
        <p class="text-xs text-blue-700 mt-1">
          Clases agendadas actualmente
        </p>
      </Card>

      <!-- Ayuda -->
      <Card>
        <h3 class="text-sm font-semibold text-gray-900 mb-3">
          ¿Cuándo usar reemplazos?
        </h3>
        <ul class="space-y-2 text-xs text-gray-600">
          <li class="flex items-start gap-2">
            <span class="w-1.5 h-1.5 bg-gray-900 rounded-full shrink-0 mt-1.5"
            ></span>
            <span>Licencia médica temporal</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="w-1.5 h-1.5 bg-gray-900 rounded-full shrink-0 mt-1.5"
            ></span>
            <span>Permiso administrativo o legal</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="w-1.5 h-1.5 bg-gray-900 rounded-full shrink-0 mt-1.5"
            ></span>
            <span>Vacaciones programadas</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="w-1.5 h-1.5 bg-gray-900 rounded-full shrink-0 mt-1.5"
            ></span>
            <span>Capacitación o curso temporal</span>
          </li>
        </ul>
      </Card>

      <!-- Acciones Rápidas -->
      <Card>
        <h3 class="text-sm font-semibold text-gray-900 mb-3">
          Acciones rápidas
        </h3>
        <div class="space-y-2">
          <a
            href={`/instructores/${id}`}
            class="block w-full text-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition-colors"
          >
            Ver perfil completo
          </a>
          <a
            href={`/instructores/${id}/editar`}
            class="block w-full text-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition-colors"
          >
            Editar instructor
          </a>
          <a
            href="/instructor/horario"
            class="block w-full text-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition-colors"
          >
            Ver horario
          </a>
        </div>
      </Card>
    </div>
  </div>
</DashboardLayout>
