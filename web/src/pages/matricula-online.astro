        document.getElementById("foto-camara-idle")?.classList.add("hidden");
        document.getElementById("foto-camara-activa")?.classList.remove("hidden");
      })
      .catch(() => alert('No se pudo acceder a la c√°mara. Usa la opci√≥n "Subir foto" en su lugar.'));
  });

  document.getElementById("foto-btn-capturar")?.addEventListener("click", () => {
    const video = document.getElementById("foto-camara-video") as HTMLVideoElement;
    const canvas = document.getElementById("foto-camara-canvas") as HTMLCanvasElement;
    canvas.width = video.videoWidth || 640;
    canvas.height = video.videoHeight || 480;
    canvas.getContext("2d")?.drawImage(video, 0, 0);
    const dataUrl = canvas.toDataURL("image/jpeg", 0.9);
    if (fotoStream) { fotoStream.getTracks().forEach(t => t.stop()); fotoStream = null; }
    fotoMostrarPreview(dataUrl);
  });

  document.getElementById("foto-upload-input")?.addEventListener("change", (e) => {
    const file = (e.target as HTMLInputElement).files?.[0];
    if (!file) return;
    const reader = new FileReader();
    reader.onload = ev => fotoMostrarPreview(ev.target?.result as string);
    reader.readAsDataURL(file);
  });

  document.getElementById("foto-btn-reset")?.addEventListener("click", () => {
    document.getElementById("foto-preview-wrap")?.classList.add("hidden");
    fotoCapturada = false;
    if (fotoTab === "camara") {
      document.getElementById("foto-camara-idle")?.classList.remove("hidden");
      document.getElementById("foto-seccion-camara")?.classList.remove("hidden");
      document.getElementById("foto-seccion-subir")?.classList.add("hidden");
    } else {
      document.getElementById("foto-seccion-subir")?.classList.remove("hidden");
      const input = document.getElementById("foto-upload-input") as HTMLInputElement | null;
      if (input) input.value = "";
    }
  });

  // Submit del formulario (demo - sin validaciones bloqueantes)
  form?.addEventListener("submit", (e) => {
    e.preventDefault();
    
    // Obtener datos del formulario
    const formData = new FormData(form);
    const cursoSeleccionado = (document.querySelector('input[name="curso"]:checked') as HTMLInputElement)?.value || "clase-b";
    
    // Guardar datos en sessionStorage para el siguiente paso
    const datos = {
      curso: cursoSeleccionado,
      nombres: formData.get("nombres") || "",
      apellidos: formData.get("apellidos") || "",
      rut: formData.get("rut") || "",
      fecha_nacimiento: formData.get("fecha_nacimiento") || "",
      email: formData.get("email") || "",
      telefono: formData.get("telefono") || "",
      sence_code: formData.get("sence_code") || "",
    };
    sessionStorage.setItem("matriculaDatos", JSON.stringify(datos));
    
    // Redirigir al paso 2 (pago)
    window.location.href = `/matricula-online/pago?curso=${cursoSeleccionado}`;
  });
