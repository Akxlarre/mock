---
/**
 * Matrícula Online - Paso 3: Confirmación
 * RF-009: Confirmación después de pago exitoso
 */
import PublicLayout from "../../layouts/PublicLayout.astro";
import PublicNavbar from "../../components/layout/PublicNavbar.astro";
import Card from "../../components/ui/Card.astro";
import Button from "../../components/ui/Button.astro";

const pasoActual = 3;
const url = Astro.url;
const cursoId = url.searchParams.get("curso") || "clase-b";
const metodoPago = url.searchParams.get("metodo") || "tarjeta";

const cursos: Record<string, { nombre: string; precio: number }> = {
  "clase-b": { nombre: "Clase B", precio: 280000 },
  "clase-b-sence": { nombre: "Clase B + SENCE", precio: 280000 },
  "a2": { nombre: "Clase A2 - Transporte Público", precio: 450000 },
  "a4": { nombre: "Clase A4 - Transporte Remunerado", precio: 450000 },
  "a3": { nombre: "Clase A3 - Vehículos Pesados", precio: 500000 },
  "a5": { nombre: "Clase A5 - Vehículos Articulados", precio: 500000 },
};

const curso = cursos[cursoId] || cursos["clase-b"];
---

<PublicLayout
  title="Confirmación - Matrícula Online"
  description="Tu matrícula ha sido confirmada exitosamente."
>
  <PublicNavbar />

  <main class="min-h-screen bg-gray-50 py-8 lg:py-12">
    <div class="container mx-auto px-4 max-w-4xl">
      <!-- Progress indicator -->
      <div class="mb-8">
        <div class="flex items-center justify-center gap-2 lg:gap-4 mb-6">
          <div class="flex items-center gap-2">
            <div class="w-10 h-10 rounded-full flex items-center justify-center text-sm font-semibold bg-blue-600 text-white shadow-md">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <span class="text-sm font-medium text-gray-900 hidden sm:block">Datos</span>
          </div>
          <div class="h-1 flex-1 max-w-24 bg-blue-600"></div>
          <div class="flex items-center gap-2">
            <div class="w-10 h-10 rounded-full flex items-center justify-center text-sm font-semibold bg-blue-600 text-white shadow-md">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <span class="text-sm font-medium text-gray-900 hidden sm:block">Pago</span>
          </div>
          <div class="h-1 flex-1 max-w-24 bg-blue-600"></div>
          <div class="flex items-center gap-2">
            <div class="w-10 h-10 rounded-full flex items-center justify-center text-sm font-semibold bg-blue-600 text-white shadow-md">
              3
            </div>
            <span class="text-sm font-medium text-gray-900 hidden sm:block">Confirmación</span>
          </div>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-2 max-w-md mx-auto">
          <div class="bg-blue-600 h-2 rounded-full transition-all duration-500" style="width: 100%"></div>
        </div>
      </div>

      <!-- Mensaje de éxito -->
      <Card class="p-8 lg:p-12 text-center mb-6">
        <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-12 h-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
        <h1 class="text-3xl font-bold text-gray-900 mb-3">
          ¡Matrícula Confirmada!
        </h1>
        <p class="text-lg text-gray-600 mb-6">
          Tu matrícula para <strong>{curso.nombre}</strong> ha sido procesada exitosamente.
        </p>
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 max-w-md mx-auto">
          <p class="text-sm text-blue-900">
            <strong>Número de matrícula:</strong> MAT-2026-{Math.floor(Math.random() * 10000).toString().padStart(4, "0")}
          </p>
        </div>
      </Card>

      <!-- Detalles -->
      <div class="grid md:grid-cols-2 gap-6 mb-6">
        <Card>
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Detalles del Pago</h3>
          <div class="space-y-3 text-sm">
            <div class="flex justify-between">
              <span class="text-gray-600">Curso:</span>
              <span class="font-medium text-gray-900">{curso.nombre}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Método de pago:</span>
              <span class="font-medium text-gray-900 capitalize">{metodoPago === "tarjeta" ? "Tarjeta" : "Transferencia"}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Monto pagado:</span>
              <span class="font-medium text-gray-900">${curso.precio.toLocaleString("es-CL")}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Fecha:</span>
              <span class="font-medium text-gray-900">{new Date().toLocaleDateString("es-CL")}</span>
            </div>
          </div>
        </Card>

        <Card>
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Próximos Pasos</h3>
          <div class="space-y-3 text-sm">
            <div class="flex items-start gap-3">
              <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center shrink-0 mt-0.5">
                <span class="text-xs font-semibold text-blue-600">1</span>
              </div>
              <div>
                <p class="font-medium text-gray-900">Revisa tu email</p>
                <p class="text-gray-600">Recibirás las credenciales de acceso al portal de alumno</p>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center shrink-0 mt-0.5">
                <span class="text-xs font-semibold text-blue-600">2</span>
              </div>
              <div>
                <p class="font-medium text-gray-900">Inicia sesión</p>
                <p class="text-gray-600">Accede a tu portal y revisa tu progreso</p>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center shrink-0 mt-0.5">
                <span class="text-xs font-semibold text-blue-600">3</span>
              </div>
              <div>
                <p class="font-medium text-gray-900">Agenda tus clases</p>
                <p class="text-gray-600">Selecciona los horarios que mejor te convengan</p>
              </div>
            </div>
          </div>
        </Card>
      </div>

      <!-- Acciones -->
      <div class="flex flex-col sm:flex-row gap-3">
        <Button href="/" variant="ghost" class="flex-1">
          Volver al Inicio
        </Button>
        <Button href="/alumno/dashboard" variant="primary" class="flex-1">
          Ir a Mi Portal →
        </Button>
      </div>

      <!-- Información adicional -->
      <Card class="mt-6 bg-gray-50">
        <div class="flex gap-4">
          <svg class="w-6 h-6 text-gray-600 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <div>
            <p class="text-sm font-semibold text-gray-900 mb-1">¿Necesitas ayuda?</p>
            <p class="text-sm text-gray-600 mb-3">
              Si tienes alguna duda sobre tu matrícula o el proceso, nuestro equipo está disponible para ayudarte.
            </p>
            <Button
              href="https://wa.me/56912345678?text=Hola,%20acabo%20de%20matricularme%20y%20tengo%20una%20consulta"
              variant="ghost"
              class="text-sm"
            >
              Contactar por WhatsApp
            </Button>
          </div>
        </div>
      </Card>
    </div>
  </main>
</PublicLayout>
