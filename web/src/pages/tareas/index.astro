---
/**
 * Tareas a secretaría - Vista administrador
 * Listar tareas asignadas y botón para designar nuevas.
 */
import DashboardLayout from "../../layouts/DashboardLayout.astro";
import Card from "../../components/ui/Card.astro";
import Button from "../../components/ui/Button.astro";

// Mock: tareas asignadas por admin a secretaría
const tareasAsignadas = [
  {
    id: 1,
    titulo: "Validar documentos - María González",
    asignadaA: "Patricia Secretaria",
    urgente: true,
    fechaAsignacion: "2026-02-04",
    estado: "pendiente",
  },
  {
    id: 2,
    titulo: "Confirmar clase 15:00 - Juan Pérez",
    asignadaA: "Patricia Secretaria",
    urgente: false,
    fechaAsignacion: "2026-02-04",
    estado: "pendiente",
  },
  {
    id: 3,
    titulo: "Actualizar datos SENCE - Pedro Silva",
    asignadaA: "Patricia Secretaria",
    urgente: true,
    fechaAsignacion: "2026-02-03",
    estado: "pendiente",
  },
];
---

<DashboardLayout title="Tareas a secretaría" userRole="admin">
  <div class="mb-8">
    <div class="flex items-center gap-2 text-sm text-secondary mb-2">
      <a href="/dashboard" class="hover:text-gray-900">Inicio</a>
      <span>/</span>
      <span class="text-gray-900 font-medium">Tareas a secretaría</span>
    </div>
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-semibold text-gray-900">Tareas a secretaría</h1>
        <p class="text-secondary mt-1">Designar y revisar tareas asignadas a secretaría</p>
      </div>
      <Button href="/tareas/crear?asignar=1" variant="primary">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Asignar tarea
      </Button>
    </div>
  </div>

  <Card>
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead>
          <tr class="border-b border-gray-200">
            <th class="text-left py-3 px-4 text-xs font-semibold text-gray-700 uppercase tracking-wide">Tarea</th>
            <th class="text-left py-3 px-4 text-xs font-semibold text-gray-700 uppercase tracking-wide">Asignada a</th>
            <th class="text-left py-3 px-4 text-xs font-semibold text-gray-700 uppercase tracking-wide">Fecha</th>
            <th class="text-left py-3 px-4 text-xs font-semibold text-gray-700 uppercase tracking-wide">Prioridad</th>
            <th class="text-left py-3 px-4 text-xs font-semibold text-gray-700 uppercase tracking-wide">Estado</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          {
            tareasAsignadas.map((t) => (
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="py-3 px-4">
                  <p class="text-sm font-medium text-gray-900">{t.titulo}</p>
                </td>
                <td class="py-3 px-4 text-sm text-gray-700">{t.asignadaA}</td>
                <td class="py-3 px-4 text-sm text-secondary">{t.fechaAsignacion}</td>
                <td class="py-3 px-4">
                  {t.urgente ? (
                    <span class="inline-block px-2 py-0.5 bg-red-100 text-red-800 text-xs font-medium rounded">Urgente</span>
                  ) : (
                    <span class="text-sm text-secondary">Normal</span>
                  )}
                </td>
                <td class="py-3 px-4">
                  <span class="inline-block px-2 py-0.5 bg-amber-100 text-amber-800 text-xs font-medium rounded">
                    Pendiente
                  </span>
                </td>
              </tr>
            ))
          }
        </tbody>
      </table>
    </div>
  </Card>
</DashboardLayout>
