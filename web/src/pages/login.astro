---
/**
 * Login - Página de inicio de sesión
 * Con botones demo para cada rol
 */
import PublicLayout from "../layouts/PublicLayout.astro";
import Card from "../components/ui/Card.astro";
import Button from "../components/ui/Button.astro";
import Input from "../components/ui/Input.astro";
---

<PublicLayout title="Iniciar Sesión - Escuela de Conductores">
    <div
        class="min-h-screen flex items-center justify-center bg-linear-to-br from-gray-50 to-gray-100 p-4"
    >
        <div class="w-full max-w-md">
            <!-- Logo y título -->
            <div class="text-center mb-8">
                <div
                    class="inline-flex items-center justify-center w-16 h-16 bg-gray-900 rounded-2xl mb-4"
                >
                    <svg
                        class="w-9 h-9 text-white"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                        ></path>
                    </svg>
                </div>
                <h1 class="text-2xl font-bold text-gray-900">
                    Escuela de Conductores
                </h1>
                <p class="text-secondary mt-1">Chillán</p>
            </div>

            <!-- Login Card -->
            <Card class="p-8">
                <h2
                    class="text-xl font-semibold text-gray-900 mb-6 text-center"
                >
                    Iniciar Sesión
                </h2>

                <form class="space-y-4 mb-6">
                    <Input
                        label="Email"
                        id="email"
                        name="email"
                        type="email"
                        placeholder="tu@email.cl"
                        required
                    />

                    <Input
                        label="Contraseña"
                        id="password"
                        name="password"
                        type="password"
                        placeholder="••••••••"
                        required
                    />

                    <div class="flex items-center justify-between text-sm">
                        <label class="flex items-center gap-2">
                            <input
                                type="checkbox"
                                class="w-4 h-4 rounded border-gray-300 text-gray-900"
                            />
                            <span class="text-gray-700">Recordarme</span>
                        </label>
                        <a href="login/recuperar-contrasena" class="text-gray-900 hover:underline"
                            >¿Olvidaste tu contraseña?</a
                        >
                    </div>

                    <Button type="submit" variant="primary" class="w-full">
                        Ingresar
                    </Button>
                </form>

                <!-- Divider -->
                <div class="relative my-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-200"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-4 bg-white text-secondary"
                            >O prueba el demo</span
                        >
                    </div>
                </div>

                <!-- Demo buttons -->
                <div class="space-y-3">
                    <a
                        href="/dashboard"
                        class="flex items-center justify-between p-4 border-2 border-gray-200 rounded-lg hover:border-gray-900 hover:bg-gray-50 transition-all group"
                    >
                        <div class="flex items-center gap-3">
                            <div
                                class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center"
                            >
                                <svg
                                    class="w-5 h-5 text-blue-600"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <p class="font-semibold text-gray-900 text-sm">
                                    Administrador
                                </p>
                                <p class="text-xs text-secondary">
                                    Acceso completo al sistema
                                </p>
                            </div>
                        </div>
                        <svg
                            class="w-5 h-5 text-gray-400 group-hover:text-gray-900 transition-colors"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>

                    <a
                        href="/instructor/dashboard"
                        class="flex items-center justify-between p-4 border-2 border-gray-200 rounded-lg hover:border-gray-900 hover:bg-gray-50 transition-all group"
                    >
                        <div class="flex items-center gap-3">
                            <div
                                class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center"
                            >
                                <svg
                                    class="w-5 h-5 text-green-600"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <p class="font-semibold text-gray-900 text-sm">
                                    Instructor
                                </p>
                                <p class="text-xs text-secondary">
                                    Gestión de clases y alumnos
                                </p>
                            </div>
                        </div>
                        <svg
                            class="w-5 h-5 text-gray-400 group-hover:text-gray-900 transition-colors"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>

                    <a
                        href="/relator/dashboard"
                        class="flex items-center justify-between p-4 border-2 border-gray-200 rounded-lg hover:border-gray-900 hover:bg-gray-50 transition-all group"
                    >
                        <div class="flex items-center gap-3">
                            <div
                                class="w-10 h-10 bg-teal-100 rounded-lg flex items-center justify-center"
                            >
                                <svg
                                    class="w-5 h-5 text-teal-600"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <p class="font-semibold text-gray-900 text-sm">
                                    Relator
                                </p>
                                <p class="text-xs text-secondary">
                                    Cursos teóricos y asistencia
                                </p>
                            </div>
                        </div>
                        <svg
                            class="w-5 h-5 text-gray-400 group-hover:text-gray-900 transition-colors"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>

                    <a
                        href="/secretaria/dashboard"
                        class="flex items-center justify-between p-4 border-2 border-gray-200 rounded-lg hover:border-gray-900 hover:bg-gray-50 transition-all group"
                    >
                        <div class="flex items-center gap-3">
                            <div
                                class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center"
                            >
                                <svg
                                    class="w-5 h-5 text-purple-600"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <p class="font-semibold text-gray-900 text-sm">
                                    Secretaria
                                </p>
                                <p class="text-xs text-secondary">
                                    Matrículas y operaciones
                                </p>
                            </div>
                        </div>
                        <svg
                            class="w-5 h-5 text-gray-400 group-hover:text-gray-900 transition-colors"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>

                    <a
                        href="/alumno/dashboard"
                        class="flex items-center justify-between p-4 border-2 border-gray-200 rounded-lg hover:border-gray-900 hover:bg-gray-50 transition-all group"
                    >
                        <div class="flex items-center gap-3">
                            <div
                                class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center"
                            >
                                <svg
                                    class="w-5 h-5 text-orange-600"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <p class="font-semibold text-gray-900 text-sm">
                                    Alumno
                                </p>
                                <p class="text-xs text-secondary">
                                    Portal del estudiante
                                </p>
                            </div>
                        </div>
                        <svg
                            class="w-5 h-5 text-gray-400 group-hover:text-gray-900 transition-colors"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>

                </div>
            </Card>

            <!-- Back to public -->
            <div class="text-center mt-6">
                <a href="/" class="text-sm text-gray-600 hover:text-gray-900">
                    ← Volver al sitio público
                </a>
            </div>
        </div>
    </div>
</PublicLayout>

<style>
    input[type="checkbox"] {
        appearance: none;
        border: 1px solid rgb(209, 213, 219);
        border-radius: 0.25rem;
        cursor: pointer;
        position: relative;
    }

    input[type="checkbox"]:checked {
        background-color: rgb(17, 24, 39);
        border-color: rgb(17, 24, 39);
    }

    input[type="checkbox"]:checked::before {
        content: "";
        position: absolute;
        inset: 0;
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 16 16' fill='white' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M12.207 4.793a1 1 0 010 1.414l-5 5a1 1 0 01-1.414 0l-2-2a1 1 0 011.414-1.414L6.5 9.086l4.293-4.293a1 1 0 011.414 0z'/%3E%3C/svg%3E");
        background-size: 100% 100%;
    }
</style>
