                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 4v16m8-8H4"></path>
            </svg>
            Registrar Anticipo
        </Button>
    </div>

    <!-- KPIs -->
    <div class="grid sm:grid-cols-3 gap-4 mb-6">
        <Card
            class="border-2 border-orange-200 bg-gradient-to-br from-orange-50 to-amber-50"
        >
            <p class="text-sm text-secondary mb-1">Anticipos Pendientes</p>
            <p class="text-3xl font-bold text-orange-700">
                ${totalPendiente.toLocaleString("es-CL")}
            </p>
            <p class="text-xs text-orange-500 mt-1">
                {instructoresConDeuda} instructores con saldo
            </p>
        </Card>
        <Card class="border-l-4 border-blue-500">
            <p class="text-sm text-secondary mb-1">
                Total Anticipado (hist√≥rico)
            </p>
            <p class="text-3xl font-bold text-blue-700">
                ${totalAnticipado.toLocaleString("es-CL")}
            </p>
            <p class="text-xs text-blue-500 mt-1">
                desde inicio de operaciones
            </p>
        </Card>
        <Card class="border-l-4 border-green-500">
            <p class="text-sm text-secondary mb-1">Ya Descontados</p>
            <p class="text-3xl font-bold text-green-700">
                ${(totalAnticipado - totalPendiente).toLocaleString("es-CL")}
            </p>
            <p class="text-xs text-green-500 mt-1">
                en liquidaciones anteriores
            </p>
        </Card>
    </div>

    <!-- Saldo por Instructor -->
    <Card class="mb-6">
        <h2
            class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2"
        >
            <span class="w-3 h-3 bg-orange-500 rounded-full"></span>
            Cuenta Corriente por Instructor
        </h2>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="border-b border-gray-200">
                        <th
                            class="text-left py-3 px-4 text-xs font-semibold text-gray-700 uppercase"
                            >Instructor</th
                        >
                        <th
                            class="text-left py-3 px-4 text-xs font-semibold text-gray-700 uppercase"
                            >Tipo</th
                        >
                        <th
                            class="text-right py-3 px-4 text-xs font-semibold text-gray-700 uppercase"
                            >Anticipos Totales</th
                        >
                        <th
                            class="text-right py-3 px-4 text-xs font-semibold text-gray-700 uppercase"
                            >Saldo Pendiente</th
                        >
                        <th
                            class="text-left py-3 px-4 text-xs font-semibold text-gray-700 uppercase"
                            >√öltimo Anticipo</th
                        >
                        <th
                            class="text-center py-3 px-4 text-xs font-semibold text-gray-700 uppercase"
                            >Estado</th
                        >
                        <th
                            class="text-center py-3 px-4 text-xs font-semibold text-gray-700 uppercase"
                            >Acciones</th
                        >
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    {
                        instructores.map((inst) => (
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="py-3 px-4 text-sm font-medium text-gray-900">
                                    {inst.nombre}
                                </td>
                                <td class="py-3 px-4">
                                    <span class="text-xs text-gray-600 bg-gray-100 px-2 py-0.5 rounded">
                                        {inst.tipo}
                                    </span>
                                </td>
                                <td class="py-3 px-4 text-right text-sm text-gray-700">
                                    $
                                    {inst.anticiposTotal.toLocaleString(
                                        "es-CL",
                                    )}
                                </td>
                                <td
                                    class={`py-3 px-4 text-right text-sm font-bold ${inst.anticiposPendientes > 0 ? "text-orange-700" : "text-green-700"}`}
                                >
                                    $
                                    {inst.anticiposPendientes.toLocaleString(
                                        "es-CL",
                                    )}
                                </td>
                                <td class="py-3 px-4 text-sm text-secondary">
                                    {inst.ultimoAnticipo || "‚Äî"}
                                </td>
                                <td class="py-3 px-4 text-center">
                                    {inst.anticiposPendientes === 0 ? (
                                        <span class="inline-flex px-2.5 py-1 bg-green-100 text-green-800 rounded-full text-xs font-medium">
                                            ‚úì Al d√≠a
                                        </span>
                                    ) : (
                                        <span class="inline-flex px-2.5 py-1 bg-orange-100 text-orange-800 rounded-full text-xs font-medium">
                                            Saldo pendiente
                                        </span>
                                    )}
                                </td>
                                <td class="py-3 px-4 text-center">
                                    <div class="flex items-center justify-center gap-1">
                                        <button
                                            class="p-1.5 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded transition-colors"
                                            title="Ver historial"
                                            onclick={`alert('üìã Historial de ${inst.nombre}\\n\\nTotal anticipado: $${inst.anticiposTotal.toLocaleString("es-CL")}\\nSaldo pendiente: $${inst.anticiposPendientes.toLocaleString("es-CL")}\\n√öltimo anticipo: ${inst.ultimoAnticipo || "Sin anticipos"}')`}
                                        >
                                            <svg
                                                class="w-4 h-4"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                                                />
                                            </svg>
                                        </button>
                                        {inst.anticiposPendientes > 0 && (
                                            <button
                                                class="p-1.5 text-gray-400 hover:text-green-600 hover:bg-green-50 rounded transition-colors"
                                                title="Descontar de liquidaci√≥n"
