                        <th
                            class="text-center py-3 px-4 text-xs font-semibold text-gray-700 uppercase"
                            >Estado</th
                        >
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    {
                        historialAnticipos.map((ant) => (
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="py-3 px-4 text-sm text-secondary">
                                    {ant.fecha}
                                </td>
                                <td class="py-3 px-4 text-sm font-medium text-gray-900">
                                    {ant.instructor}
                                </td>
                                <td class="py-3 px-4 text-sm text-gray-700">
                                    {ant.motivo}
                                </td>
                                <td class="py-3 px-4 text-right text-sm font-semibold text-orange-700">
                                    ${ant.monto.toLocaleString("es-CL")}
                                </td>
                                <td class="py-3 px-4 text-center">
                                    {ant.estado === "pendiente" ? (
                                        <span class="inline-flex px-2.5 py-1 bg-orange-100 text-orange-800 rounded-full text-xs font-medium">
                                            Pendiente
                                        </span>
                                    ) : (
                                        <span class="inline-flex px-2.5 py-1 bg-green-100 text-green-800 rounded-full text-xs font-medium">
                                            ‚úì Descontado
