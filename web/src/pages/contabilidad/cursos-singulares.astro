---
/**
 * Cursos Singulares ‚Äî Cobro simplificado
 * RF-035: Cobro de cursos singulares (SENCE, Gr√∫a, Retroexcavadora)
 */
import DashboardLayout from "../../layouts/DashboardLayout.astro";
import Card from "../../components/ui/Card.astro";
import Button from "../../components/ui/Button.astro";
import { ESCUELA_ACTUAL } from "../../lib/mockData";

const cursos = [
    {
        id: 1,
        nombre: "Operador de Gr√∫a Horquilla",
        tipo: "SENCE",
        precio: 280000,
        duracion: "40 hrs",
        inscritos: 8,
        cupos: 12,
        estado: "activo",
        inicio: "2026-02-15",
        facturacion: "SENCE",
    },
    {
        id: 2,
        nombre: "Operador de Retroexcavadora",
        tipo: "SENCE",
        precio: 350000,
        duracion: "60 hrs",
        inscritos: 5,
        cupos: 10,
        estado: "activo",
        inicio: "2026-03-01",
        facturacion: "SENCE",
    },
    {
        id: 3,
        nombre: "Maquinaria Pesada ‚Äî B√°sico",
        tipo: "Particular",
        precio: 420000,
        duracion: "80 hrs",
        inscritos: 3,
        cupos: 8,
        estado: "pr√≥ximo",
        inicio: "2026-04-01",
        facturacion: "Boleta",
    },
    {
        id: 4,
        nombre: "Manejo Defensivo ‚Äî Empresas",
        tipo: "SENCE",
        precio: 85000,
        duracion: "8 hrs",
        inscritos: 15,
        cupos: 20,
        estado: "activo",
        inicio: "2026-02-10",
        facturacion: "SENCE",
    },
    {
        id: 5,
        nombre: "Transporte de Carga Peligrosa",
        tipo: "Particular",
        precio: 180000,
        duracion: "24 hrs",
        inscritos: 6,
        cupos: 15,
        estado: "finalizado",
        inicio: "2026-01-06",
        facturacion: "Boleta",
    },
];

const totalIngresos = cursos
    .filter((c) => c.estado !== "pr√≥ximo")
    .reduce((s, c) => s + c.precio * c.inscritos, 0);
const cursosActivos = cursos.filter((c) => c.estado === "activo").length;
const totalInscritos = cursos.reduce((s, c) => s + c.inscritos, 0);

const tipoColor: Record<string, string> = {
    SENCE: "bg-blue-100 text-blue-800",
    Particular: "bg-purple-100 text-purple-800",
};
const estadoColor: Record<string, string> = {
    activo: "bg-green-100 text-green-800",
    pr√≥ximo: "bg-yellow-100 text-yellow-800",
    finalizado: "bg-gray-100 text-gray-600",
};
---

<DashboardLayout title="Cursos Singulares" escuela={ESCUELA_ACTUAL}>
    <div class="mb-6">
        <div class="flex items-center gap-2 text-sm text-secondary mb-2">
            <a href="/dashboard" class="hover:text-gray-900">Inicio</a>
            <span>/</span>
            <span class="text-gray-900 font-medium">Cursos Singulares</span>
        </div>
    </div>

    <div
        class="mb-8 flex flex-col sm:flex-row sm:items-center justify-between gap-4"
    >
        <div>
            <h1 class="text-3xl font-semibold text-gray-900">
                Cursos Singulares
            </h1>
            <p class="text-secondary mt-1">
                RF-035 ¬∑ Cobro simplificado de cursos SENCE, Gr√∫a,
                Retroexcavadora
            </p>
        </div>
        <Button
            variant="primary"
            onClick="alert('‚ûï Crear nuevo curso singular\n\nFormulario:\n‚Ä¢ Nombre del curso\n‚Ä¢ Tipo (SENCE / Particular)\n‚Ä¢ Precio\n‚Ä¢ Duraci√≥n\n‚Ä¢ Cupos disponibles\n‚Ä¢ Fecha inicio\n‚Ä¢ Facturaci√≥n (SENCE / Boleta)')"
        >
            <svg
                class="w-4 h-4 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 4v16m8-8H4"></path>
            </svg>
            Nuevo Curso
        </Button>
    </div>

    <!-- KPIs -->
    <div class="grid sm:grid-cols-3 gap-4 mb-6">
        <Card class="border-l-4 border-blue-500">
            <p class="text-sm text-secondary mb-1">Cursos Activos</p>
            <p class="text-3xl font-bold text-blue-700">{cursosActivos}</p>
            <p class="text-xs text-blue-500 mt-1">de {cursos.length} totales</p>
        </Card>
        <Card class="border-l-4 border-green-500">
            <p class="text-sm text-secondary mb-1">Total Inscritos</p>
            <p class="text-3xl font-bold text-green-700">{totalInscritos}</p>
            <p class="text-xs text-green-500 mt-1">en todos los cursos</p>
        </Card>
        <Card class="border-l-4 border-indigo-500">
            <p class="text-sm text-secondary mb-1">Ingresos Estimados</p>
            <p class="text-3xl font-bold text-indigo-700">
                ${totalIngresos.toLocaleString("es-CL")}
            </p>
            <p class="text-xs text-indigo-500 mt-1">
                cursos activos + finalizados
            </p>
        </Card>
    </div>

    <!-- Tabla de cursos -->
    <Card>
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-900">
                Listado de Cursos
            </h2>
            <div class="flex gap-2">
                <select
                    class="h-9 px-3 text-sm bg-white border border-gray-300 rounded-lg"
                >
                    <option>Todos los tipos</option>
                    <option>SENCE</option>
                    <option>Particular</option>
                </select>
                <select
                    class="h-9 px-3 text-sm bg-white border border-gray-300 rounded-lg"
                >
                    <option>Todos los estados</option>
                    <option>Activo</option>
                    <option>Pr√≥ximo</option>
                    <option>Finalizado</option>
                </select>
            </div>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="border-b border-gray-200">
                        <th
                            class="text-left py-3 px-4 text-xs font-semibold text-gray-700 uppercase"
                            >Curso</th
                        >
                        <th
                            class="text-center py-3 px-4 text-xs font-semibold text-gray-700 uppercase"
                            >Tipo</th
                        >
                        <th
                            class="text-right py-3 px-4 text-xs font-semibold text-gray-700 uppercase"
                            >Precio</th
                        >
                        <th
                            class="text-center py-3 px-4 text-xs font-semibold text-gray-700 uppercase"
                            >Duraci√≥n</th
                        >
                        <th
                            class="text-center py-3 px-4 text-xs font-semibold text-gray-700 uppercase"
                            >Inscritos</th
                        >
                        <th
                            class="text-center py-3 px-4 text-xs font-semibold text-gray-700 uppercase"
                            >Estado</th
                        >
                        <th
                            class="text-center py-3 px-4 text-xs font-semibold text-gray-700 uppercase"
                            >Facturaci√≥n</th
                        >
                        <th
                            class="text-right py-3 px-4 text-xs font-semibold text-gray-700 uppercase"
                            >Ingreso Est.</th
                        >
                        <th
                            class="text-center py-3 px-4 text-xs font-semibold text-gray-700 uppercase"
                            >Acciones</th
                        >
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    {
                        cursos.map((curso) => (
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="py-3 px-4">
                                    <p class="text-sm font-medium text-gray-900">
                                        {curso.nombre}
                                    </p>
                                    <p class="text-xs text-gray-500">
                                        Inicio: {curso.inicio}
                                    </p>
                                </td>
                                <td class="py-3 px-4 text-center">
                                    <span
                                        class={`inline-flex px-2.5 py-1 rounded-full text-xs font-semibold ${tipoColor[curso.tipo]}`}
                                    >
                                        {curso.tipo}
                                    </span>
                                </td>
                                <td class="py-3 px-4 text-right text-sm font-semibold text-gray-900">
                                    ${curso.precio.toLocaleString("es-CL")}
                                </td>
                                <td class="py-3 px-4 text-center text-sm text-secondary">
                                    {curso.duracion}
                                </td>
                                <td class="py-3 px-4 text-center">
                                    <span class="text-sm font-medium text-gray-900">
                                        {curso.inscritos}
                                    </span>
                                    <span class="text-xs text-gray-400">
                                        /{curso.cupos}
                                    </span>
                                </td>
                                <td class="py-3 px-4 text-center">
                                    <span
                                        class={`inline-flex px-2.5 py-1 rounded-full text-xs font-medium capitalize ${estadoColor[curso.estado]}`}
                                    >
                                        {curso.estado}
                                    </span>
                                </td>
                                <td class="py-3 px-4 text-center">
                                    <span
                                        class={`text-xs font-medium ${curso.facturacion === "SENCE" ? "text-blue-600" : "text-gray-600"}`}
                                    >
                                        {curso.facturacion}
                                    </span>
                                </td>
                                <td class="py-3 px-4 text-right text-sm font-bold text-green-700">
                                    $
                                    {(
                                        curso.precio * curso.inscritos
                                    ).toLocaleString("es-CL")}
                                </td>
                                <td class="py-3 px-4 text-center">
                                    <div class="flex items-center justify-center gap-1">
                                        <button
                                            class="p-1.5 text-gray-400 hover:text-blue-600 hover:bg-blue-50 rounded transition-colors"
                                            title="Ver detalle"
                                            onclick={`alert('üìã Detalle: ${curso.nombre}\\n\\nTipo: ${curso.tipo}\\nPrecio: $${curso.precio.toLocaleString("es-CL")}\\nInscritos: ${curso.inscritos}/${curso.cupos}\\nFacturaci√≥n: ${curso.facturacion}')`}
                                        >
                                            <svg
                                                class="w-4 h-4"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                                                />
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                                                />
                                            </svg>
                                        </button>
                                        <button
                                            class="p-1.5 text-gray-400 hover:text-green-600 hover:bg-green-50 rounded transition-colors"
                                            title="Registrar cobro"
                                            onclick={`alert('üí∞ Registrar cobro\\n\\nCurso: ${curso.nombre}\\nPrecio unitario: $${curso.precio.toLocaleString("es-CL")}\\nFacturaci√≥n: ${curso.facturacion}')`}
                                        >
                                            <svg
                                                class="w-4 h-4"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                                                />
                                            </svg>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        ))
                    }
                </tbody>
                <tfoot>
                    <tr class="border-t-2 border-gray-300 bg-gray-50">
                        <td class="py-3 px-4 text-sm font-bold text-gray-900"
                            >TOTAL</td
                        >
                        <td colspan="3"></td>
                        <td
                            class="py-3 px-4 text-center text-sm font-bold text-gray-900"
                            >{totalInscritos}</td
                        >
                        <td colspan="2"></td>
                        <td
                            class="py-3 px-4 text-right text-sm font-bold text-green-700"
                        >
                            ${totalIngresos.toLocaleString("es-CL")}
                        </td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="mt-4 p-3 bg-blue-50 rounded-lg border border-blue-200">
            <p class="text-xs text-blue-800">
                <strong>SENCE:</strong> Los cursos SENCE se facturan directamente
                al organismo. El cobro al alumno es $0 si est√° 100% financiado.
                <strong>Particular:</strong> Se emite boleta por el monto total al
                inscrito.
            </p>
        </div>
    </Card>
</DashboardLayout>
