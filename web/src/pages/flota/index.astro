// Funci√≥n para calcular d√≠as restantes
function diasRestantes(fecha: string): number {
  const hoy = new Date('2026-02-03');
  const fechaVenc = new Date(fecha);
  const diff = fechaVenc.getTime() - hoy.getTime();
  return Math.ceil(diff / (1000 * 3600 * 24));
}

// Funci√≥n para determinar urgencia
function getUrgencia(dias: number): { color: string; label: string } {
  if (dias < 0) return { color: 'red', label: 'Vencido' };
  if (dias <= 5) return { color: 'red', label: 'Urgente' };
  if (dias <= 15) return { color: 'orange', label: 'Pr√≥ximo' };
  return { color: 'green', label: 'OK' };
}
