---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Card from '../../components/ui/Card.astro';
import Input from '../../components/ui/Input.astro';
import Button from '../../components/ui/Button.astro';
import { ESCUELA_ACTUAL } from '../../lib/mockData';
---
<DashboardLayout title="Nuevo vehículo - Escuela de Conductores" escuela={ESCUELA_ACTUAL}>
  <h1 class="text-2xl font-semibold text-base-content mb-6">Nuevo vehículo</h1>
  <Card class="max-w-2xl">
    <div role="tablist" class="tabs tabs-boxed mb-6">
      <a role="tab" class="tab tab-active" aria-selected="true">Datos vehículo</a>
      <a role="tab" class="tab">Revisiones</a>
      <a role="tab" class="tab">Documentos</a>
    </div>
    <form class="space-y-4" action="/flota" method="get">
      <Input label="Patente" name="patente" placeholder="ABCD-12" required />
      <Input label="Marca" name="marca" placeholder="Toyota" required />
      <Input label="Modelo" name="modelo" placeholder="Yaris" required />
      <Input label="Año" name="ano" type="number" placeholder="2022" required />
      <div class="flex gap-3 pt-4">
        <a href="/flota" class="btn btn-ghost min-h-11">Cancelar</a>
        <Button type="submit" variant="primary">Guardar vehículo</Button>
      </div>
    </form>
  </Card>
</DashboardLayout>
