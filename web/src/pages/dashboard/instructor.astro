---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';
import { misClasesHoy, ESCUELA_ACTUAL } from '../../lib/mockData';
---
<DashboardLayout title="Dashboard Instructor - Escuela de Conductores" escuela={ESCUELA_ACTUAL}>
  <h1 class="text-2xl font-semibold text-base-content mb-6">Instructor</h1>

  <section aria-labelledby="mis-clases-hoy">
    <h2 id="mis-clases-hoy" class="text-xl font-semibold text-base-content mb-4">Mis clases hoy</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {misClasesHoy.map((clase) => (
        <Card class="p-6 flex flex-col gap-3">
          <p class="text-lg font-semibold text-base-content">{clase.hora}</p>
          <p class="text-base text-base-content">{clase.alumno}</p>
          <p class="text-sm text-base-content/70">Clase {clase.claseNum} de {clase.totalClases}</p>
          <Button variant="primary" class="w-full mt-2 min-h-11">
            Iniciar clase
          </Button>
        </Card>
      ))}
    </div>
  </section>
</DashboardLayout>
