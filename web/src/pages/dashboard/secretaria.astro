---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import Card from '../../components/ui/Card.astro';
import { agendaHoy, ESCUELA_ACTUAL } from '../../lib/mockData';
---
<DashboardLayout title="Dashboard Secretaría - Escuela de Conductores" escuela={ESCUELA_ACTUAL}>
  <h1 class="text-2xl font-semibold text-base-content mb-6">Secretaría</h1>

  <section aria-labelledby="agenda-hoy">
    <h2 id="agenda-hoy" class="text-xl font-semibold text-base-content mb-4">Agenda de hoy</h2>
    <Card class="overflow-hidden p-0">
      <div class="overflow-x-auto">
        <table class="table">
          <thead>
            <tr class="bg-base-200 text-base-content">
              <th class="font-semibold text-sm py-3 px-4">Hora</th>
              <th class="font-semibold text-sm py-3 px-4">Alumno</th>
              <th class="font-semibold text-sm py-3 px-4">Instructor</th>
              <th class="font-semibold text-sm py-3 px-4">Estado</th>
            </tr>
          </thead>
          <tbody>
            {agendaHoy.map((fila) => (
              <tr class="hover:bg-base-200/80 border-b border-base-300/50">
                <td class="py-4 px-4">{fila.hora}</td>
                <td class="py-4 px-4">{fila.alumno}</td>
                <td class="py-4 px-4">{fila.instructor}</td>
                <td class="py-4 px-4">
                  <span class={`badge badge-sm ${fila.estado === 'Confirmada' ? 'badge-success' : 'badge-ghost'}`}>
                    {fila.estado}
                  </span>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </Card>
  </section>
</DashboardLayout>
