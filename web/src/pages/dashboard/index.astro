---
/**
 * Dashboard Principal - Admin View
 * Módulo RF-001 a RF-005: Gestión de usuarios y sistema
 * Diseño Geist con stats cards, actividad reciente, y acciones rápidas
 */
import DashboardLayout from "../../layouts/DashboardLayout.astro";
import Card from "../../components/ui/Card.astro";
import Button from "../../components/ui/Button.astro";

// Mock data (en producción vendría de API)
const stats = {
  alumnosActivos: 247,
  alumnosActivosChange: "+12%",
  clasesHoy: 18,
  clasesHoyChange: "+3",
  pendientesPago: 34,
  pendientesPagoChange: "-5%",
  vehiculosActivos: 12,
  vehiculosActivosChange: "100%",
};

const actividadReciente = [
  {
    tipo: "matricula",
    usuario: "María González",
    accion: "Nueva matrícula Clase B",
    tiempo: "Hace 5 min",
    icon: "user-plus",
  },
  {
    tipo: "pago",
    usuario: "Juan Pérez",
    accion: "Pago registrado $250.000",
    tiempo: "Hace 15 min",
    icon: "credit-card",
  },
  {
    tipo: "clase",
    usuario: "Instructor: Carlos Rojas",
    accion: "Clase finalizada con Pedro Silva",
    tiempo: "Hace 32 min",
    icon: "check-circle",
  },
  {
    tipo: "alerta",
    usuario: "Sistema",
    accion: "Vehículo ABC-123: Rev. Técnica vence en 5 días",
    tiempo: "Hace 1 hora",
    icon: "alert-triangle",
  },
  {
    tipo: "usuario",
    usuario: "Admin",
    accion: "Nuevo instructor agregado: Ana Martínez",
    tiempo: "Hace 2 horas",
    icon: "user",
  },
];

const alertas = [
  {
    tipo: "urgente",
    mensaje: "3 vehículos con documentos próximos a vencer",
    link: "/flota",
  },
  {
    tipo: "importante",
    mensaje: "12 alumnos pendientes de completar pago",
    link: "/pagos",
  },
  {
    tipo: "info",
    mensaje: "5 clases sin instructor asignado para mañana",
    link: "/agenda",
  },
];
---

<DashboardLayout
  title="Dashboard - Escuela de Conductores"
  escuela="Conductores Chillán"
>
  <!-- Header con breadcrumb -->
  <div class="mb-8">
    <div class="flex items-center gap-2 text-sm text-secondary mb-2">
      <svg
        class="w-4 h-4"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
        ></path>
      </svg>
      <span>Inicio</span>
      <span>/</span>
      <span class="text-gray-900 font-medium">Dashboard</span>
    </div>
    <h1
      class="text-3xl font-semibold text-gray-900"
      transition:name="page-title"
    >
      Dashboard
    </h1>
    <p class="text-secondary mt-1">Visión general del sistema de gestión</p>
  </div>

  <!-- KPI Stats Grid -->
  <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
    <!-- Alumnos Activos -->
    <Card hoverable>
      <div class="flex items-start justify-between">
        <div>
          <p class="text-sm font-medium text-secondary">Alumnos Activos</p>
          <p class="text-3xl font-semibold text-gray-900 mt-2">
            {stats.alumnosActivos}
          </p>
          <p class="text-xs text-green-600 mt-1 font-medium">
            ↗ {stats.alumnosActivosChange} vs mes anterior
          </p>
        </div>
        <div
          class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center"
        >
          <svg
            class="w-5 h-5 text-blue-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
            ></path>
          </svg>
        </div>
      </div>
    </Card>

    <!-- Clases Hoy -->
    <Card hoverable>
      <div class="flex items-start justify-between">
        <div>
          <p class="text-sm font-medium text-secondary">Clases Hoy</p>
          <p class="text-3xl font-semibold text-gray-900 mt-2">
            {stats.clasesHoy}
          </p>
          <p class="text-xs text-green-600 mt-1 font-medium">
            ↗ {stats.clasesHoyChange} vs ayer
          </p>
        </div>
        <div
          class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center"
        >
          <svg
            class="w-5 h-5 text-green-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
            ></path>
          </svg>
        </div>
      </div>
    </Card>

    <!-- Pendientes Pago -->
    <Card hoverable>
      <div class="flex items-start justify-between">
        <div>
          <p class="text-sm font-medium text-secondary">Pendientes Pago</p>
          <p class="text-3xl font-semibold text-gray-900 mt-2">
            {stats.pendientesPago}
          </p>
          <p class="text-xs text-green-600 mt-1 font-medium">
            ↘ {stats.pendientesPagoChange} vs mes anterior
          </p>
        </div>
        <div
          class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center"
        >
          <svg
            class="w-5 h-5 text-orange-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 3 003-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"
            ></path>
          </svg>
        </div>
      </div>
    </Card>

    <!-- Vehículos Activos -->
    <Card hoverable>
      <div class="flex items-start justify-between">
        <div>
          <p class="text-sm font-medium text-secondary">Vehículos Activos</p>
          <p class="text-3xl font-semibold text-gray-900 mt-2">
            {stats.vehiculosActivos}
          </p>
          <p class="text-xs text-gray-500 mt-1 font-medium">
            {stats.vehiculosActivosChange} operativos
          </p>
        </div>
        <div
          class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center"
        >
          <svg
            class="w-5 h-5 text-purple-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
          </svg>
        </div>
      </div>
    </Card>
  </section>

  <!-- Alertas Importantes -->
  {
    alertas.length > 0 && (
      <section class="mb-8">
        <div class="space-y-2">
          {alertas.map((alerta) => (
            <div
              class={`
            p-4 rounded-lg border flex items-start justify-between gap-4
            ${alerta.tipo === "urgente" ? "bg-red-50 border-red-200" : ""}
            ${alerta.tipo === "importante" ? "bg-orange-50 border-orange-200" : ""}
            ${alerta.tipo === "info" ? "bg-blue-50 border-blue-200" : ""}
          `}
            >
              <div class="flex items-start gap-3 flex-1">
                <svg
                  class={`
                w-5 h-5 mt-0.5 shrink-0
                ${alerta.tipo === "urgente" ? "text-red-600" : ""}
                ${alerta.tipo === "importante" ? "text-orange-600" : ""}
                ${alerta.tipo === "info" ? "text-blue-600" : ""}
              `}
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                  />
                </svg>
                <div>
                  <p
                    class={`
                  text-sm font-medium
                  ${alerta.tipo === "urgente" ? "text-red-900" : ""}
                  ${alerta.tipo === "importante" ? "text-orange-900" : ""}
                  ${alerta.tipo === "info" ? "text-blue-900" : ""}
                `}
                  >
                    {alerta.mensaje}
                  </p>
                </div>
              </div>
              <Button
                href={alerta.link}
                variant="ghost"
                class="text-xs shrink-0"
              >
                Ver más →
              </Button>
            </div>
          ))}
        </div>
      </section>
    )
  }

  <!-- Grid: Quick Actions + Actividad Reciente -->
  <div class="grid lg:grid-cols-3 gap-6">
    <!-- Quick Actions -->
    <section class="lg:col-span-1">
      <Card>
        <h2 class="text-lg font-semibold text-gray-900 mb-4">
          Acciones Rápidas
        </h2>
        <div class="space-y-2">
          <Button
            href="/matricula/nuevo"
            variant="secondary"
            class="w-full justify-start"
          >
            <svg
              class="w-4 h-4 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"
              ></path>
            </svg>
            Nueva Matrícula
          </Button>

          <Button
            href="/agenda/nueva-clase"
            variant="secondary"
            class="w-full justify-start"
          >
            <svg
              class="w-4 h-4 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
              ></path>
            </svg>
            Agendar Clase
          </Button>

          <Button
            href="/pagos/nuevo"
            variant="secondary"
            class="w-full justify-start"
          >
            <svg
              class="w-4 h-4 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"
              ></path>
            </svg>
            Registrar Pago
          </Button>

          <Button
            href="/usuarios/nuevo"
            variant="secondary"
            class="w-full justify-start"
          >
            <svg
              class="w-4 h-4 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
              ></path>
            </svg>
            Crear Usuario
          </Button>

          <hr class="my-4 border-gray-200" />

          <Button
            href="/agenda"
            variant="ghost"
            class="w-full justify-start text-sm"
          >
            Ver Agenda Completa
          </Button>
          <Button
            href="/matricula"
            variant="ghost"
            class="w-full justify-start text-sm"
          >
            Ver Todas las Matrículas
          </Button>
        </div>
      </Card>
    </section>

    <!-- Actividad Reciente -->
    <section class="lg:col-span-2">
      <Card>
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-semibold text-gray-900">
            Actividad Reciente
          </h2>
          <Button href="/auditoria" variant="ghost" class="text-sm">
            Ver todas →
          </Button>
        </div>

        <div class="space-y-4">
          {
            actividadReciente.map((item) => (
              <div class="flex items-start gap-3 pb-4 border-b border-gray-100 last:border-0 last:pb-0">
                <div
                  class={`
                w-8 h-8 rounded-lg flex items-center justify-centers shrink-0
                ${item.tipo === "matricula" ? "bg-blue-100" : ""}
                ${item.tipo === "pago" ? "bg-green-100" : ""}
                ${item.tipo === "clase" ? "bg-purple-100" : ""}
                ${item.tipo === "alerta" ? "bg-orange-100" : ""}
                ${item.tipo === "usuario" ? "bg-gray-100" : ""}
              `}
                >
                  <svg
                    class={`
                  w-4 h-4
                  ${item.tipo === "matricula" ? "text-blue-600" : ""}
                  ${item.tipo === "pago" ? "text-green-600" : ""}
                  ${item.tipo === "clase" ? "text-purple-600" : ""}
                  ${item.tipo === "alerta" ? "text-orange-600" : ""}
                  ${item.tipo === "usuario" ? "text-gray-600" : ""}
                `}
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    {item.icon === "user-plus" && (
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"
                      />
                    )}
                    {item.icon === "credit-card" && (
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 003-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"
                      />
                    )}
                    {item.icon === "check-circle" && (
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                      />
                    )}
                    {item.icon === "alert-triangle" && (
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                      />
                    )}
                    {item.icon === "user" && (
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                      />
                    )}
                  </svg>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900">
                    {item.usuario}
                  </p>
                  <p class="text-sm text-secondary truncate">{item.accion}</p>
                  <p class="text-xs text-muted mt-0.5">{item.tiempo}</p>
                </div>
              </div>
            ))
          }
        </div>
      </Card>
    </section>
  </div>
</DashboardLayout>

<style>
  /* Smooth transitions para hover cards */
  [data-card-hoverable] {
    transition: all 200ms cubic-bezier(0.19, 1, 0.22, 1);
  }
</style>
